<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Account</a> </li>
            <li class="active"> <strong>  Account Config</strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px"> Account Config </h5>
                    <hr>
                    @using (Html.BeginForm("AccConfig", "AccConfig", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            
                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">

                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th>  Type </th>
                                                <th> Ledger Name </th>
                                              

                                            </tr>

                                        </thead>
                                        <tbody id="tbBooks">

                                            @{

                                                int i = 0;

                                                foreach (var item in Model.ConfigLst.ToList())
                                                {
                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">
                                                        <td>
                                                            @Html.TextBoxFor(o => o.ConfigLst[i].Type, new { @id = "txtType" + i, @class = "form-control", style = "width: 200px;" ,@readonly="readonly"}) @Html.HiddenFor(o => o.ID)
                                                        </td>

                                                        <td>
                                                            @Html.DropDownListFor( o => o.ConfigLst[i].Ledger, Model.ConfigLst[i].Ledlst, "Please Select", new { @class = "form-control _select newcss", @id = "ddlLedger" + i, style = "width: 130px;" })

                                                        </td>




                                                    </tr>

                                                    i = i + 1;
                                                }

                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                           
                            <div style="height:30px;"></div>
                            <div class="col-lg-10"></div>
                            <button type="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave">Submit</button>
                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("AccConfig", "AccConfig")'">Cancel</button>

                        </form>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
