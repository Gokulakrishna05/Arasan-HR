@model Arasan.Models.AccConfig

@{
    ViewData["Title"] = "AccConfig";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Account</a> </li>
            <li class="active"> <strong> Account Config  </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    @*<h5 style="font-size:14px"> Account Config </h5>*@
                    <hr>
                    @using (Html.BeginForm("AccConfig", "AccConfig", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>

                            
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Scheme Name<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(C => C.Scheme, Model.Schemelst,"Please Select", new { @id = "ddlScheme", @Class = "form-control _select", @TabIndex = 1, @onchange = "changeScheme(this.value);" })<br><br>
                                        </div>
                                    </div>
                                </div>
                             </div>
                            
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label"> Transaction Name<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.TransactionName, new { @id = "txtTrasactionName", @class = "form-control", @TabIndex = 2, @size="30" })<br>
                                            @Html.HiddenFor(C => C.ID)
                                        </div>


                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Transaction ID<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.TransactionID, new { @id = "txtTrasactionID", @class = "form-control", @TabIndex = 2, @size="30" })<br>
                                        </div>


                                    </div>
                                </div>
                            </div>

                          
                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="btn-group">
                                        <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow()" class="btn sbold green" /></p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">


                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>
                                               
                                                <th> Type </th>
                                                <th> Name</th>
                                                <th> Scheme Name </th>
                                                <th> Ledger </th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int i = 0;
                                                int j = 1;

                                                //foreach (var item in Model.Schemelst.ToList())
                                                {
                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                        
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Type, new { @id = "txtType" + i, @class = "form-control", style = "width:180px;" , @TabIndex = 2})
                                                            
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Tname, new { @id = "txtTname" + i, @class = "form-control", style = "width: 180px;, @TabIndex = 2"})
                                                            
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Schname, new { @id = "txtSchname"+ i , @class = "form-control", style = "width: 180px; , @TabIndex = 2"})
                                                            
                                                        </td>
                                                        <td>
                                                                @Html.DropDownListFor(o => o.ledger, Model.ledlst, "-- Please Select --", new { @class = "form-control chosen-select newcss", @id = "ddlledger" + i, style = "width: 200px;"  })
                                                                @Html.HiddenFor(o => o.saveledger)
                                                            
                                                        </td>
                                                        
                                                        <td>
                                                                @Html.HiddenFor(o => o.Isvalid, new { @id = "Isvalid" + i })
                                                                <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="Schemelst.Index" type="hidden" value="@(i)" />
                                                            
                                                        </td>
                                                       
                                                    </tr>
                                                    i = i + 1;
                                                    j = j + 1;

                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>


                            <div style="height:30px;"></div>
                            <div class="col-lg-10"></div>
                            <button type="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave">Submit</button>
                            <a button class="btn btn-danger" type="submit" href="@Url.Action("ListAccConfig", "AccConfig")">Cancel</a>

                        </form>


                    }
                </div>

            </div>

        </div>

    </div>

</div>


