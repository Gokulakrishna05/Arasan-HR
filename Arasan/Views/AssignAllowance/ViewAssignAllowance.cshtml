@model Arasan.Models.AssignAllowance

@{
    Layout = "_PopupLayout";

    ViewData["Title"] = "View Assign Allowance";
}

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a href="@Url.Action("ListAssignAllowance", "AssignAllowance")">HR</a> </li>
            <li class="active"> <strong>View Assign Allowance Details</strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">View Assign Allowance Detail</h5>
                    <hr>
                    @using (Html.BeginForm("ViewAssignAllowance", "AssignAllowance", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Employee Name<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.EmpName, new { @id = "EmpName", @Class = "form-control _select", @TabIndex = 1, @readonly = "readonly" })
                                            @Html.HiddenFor(C => C.ID)
                                        </div>
                                    </div>
                                </div>
                                
                            </div>

                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">


                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>

                                                <th>Allowance Name</th>
                                                <th>Allowance Type</th>
                                                <th>Amount/Percentage</th>
                                                <th>Effective Date</th>
                                                <th>Remarks</th>

                                            </tr>

                                        </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int i = 0;

                                                foreach (var item in Model.Allowancelst.ToList())
                                                {
                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                        <td>
                                                            @Html.DisplayFor(o => o.Allowancelst[i].AllowanceName)                                                           
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.Allowancelst[i].AllowanceType)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.Allowancelst[i].AmtPerc)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.Allowancelst[i].EffectiveDate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.Allowancelst[i].Description)
                                                        </td>

                                                        <td>
                                                            @Html.HiddenFor(o => o.Allowancelst[i].Isvalid, new { @id = "Isvalid" + i })
                                                            <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="Allowancelst.Index" type="hidden" value="@(i)" />
                                                        </td>

                                                    </tr>
                                                    i = i + 1;


                                                }
                                            }

                                        </tbody>




                                    </table>
                                </div>
                            </div>
                            
                        </form>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

