                                                                <tr>
                                                                    <th>Wastage Item </th>
                                                                    <th>Batch No</th>
                                                                    <th> Wastage Qty </th>
                                                                    <th> Wastage Location </th>
                                                                    <th>Bin Id  </th>
                                                                </tr>
                                                            </thead>
