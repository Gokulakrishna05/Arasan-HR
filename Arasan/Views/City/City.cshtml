@model Arasan.Models.City

@{
    ViewData["Title"] = "City";
}

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong> City Master </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">City Master</h5>
                    <hr>
                    @using (Html.BeginForm("City", "City", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
              <form>

                            <div class="row">
                                <div class="col-lg-7">
                                
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Country Name<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(C => C.countryid, Model.cuntylst, new { @id = "ddlcountry", @Class = "form-control chosen-select", @TabIndex = 1 })<br />
                                        </div>

                                    </div>
                                </div> 
                            </div>

                            <div class="row">

                                <div class="col-md-7">
                                    <div class="form-group">
                                        
                                        <label for="inputName3" class="col-sm-4 control-label">State Name<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(C => C.State, Model.sta, new { @id = "ddlsta", @Class = "form-control chosen-select", @TabIndex = 1 })<br />
                                        </div>

                                    </div>
                                </div>
                            </div>
                
			              <div class="row">
                                        
                            <div class="col-md-7">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">City Name<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(C => C.Cit, new { @id = "txtCityName", @class = "form-control", @TabIndex = 2  })<br />
                                    </div>

                                </div>
                            </div>
                            </div>
                            <div style="height:30px;"></div>
                            <button type="submit" name="submit" class="btn btn-success" id="btnSave" value="Save" tabindex="18">Insert</button>
                            <input type="reset" class="btn btn-primary" value="Reset">
                            <a button class="btn btn-danger" type="submit" href="@Url.Action("ListCity", "City")"> Cancel </a>
                      
              </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(".chosen-select").chosen();
    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;
            if (document.getElementById("txtCityName").value == "") {
                isValid = false;
                $(txtCityName).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter City");
                return false;
            }
            else {
                $(txtCityName).css({
                    "border": "",
                    "background": ""
                });
            }
            
            if (isValid == false)
                e.preventDefault();


        });

    });
</script>