@model Arasan.Models.Commission

@{
    ViewData["Title"] = "Commission";
}

<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong> Commission </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">Commission</h5>
                    <hr>
                    @using (Html.BeginForm("Commission", "Commission", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>

                            <div style="height:20px;"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Doc ID<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Cid, new { @id = "txtID", @class = "form-control", @TabIndex = 1,@readonly="readonly" })
                                            @Html.HiddenFor(C => C.ID)
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Doc Date <label class="mandatory">*</label></label>

                                        <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                            @Html.TextBoxFor(C => C.Date, new { @id = "DOB", @class = "form-control", @TabIndex = 2, @size = "31" ,  @readonly="readonly"})
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Commission Code<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Code, new { @id = "txtCode", @class = "form-control", @TabIndex = 2 })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Commission Desc<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Value, new { @id = "txtDesc", @class = "form-control", @TabIndex = 2 })
                                            @Html.HiddenFor(C => C.ID)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="height:20px;"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Valid Date <label class="mandatory">*</label></label>

                                        <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                            @Html.TextBoxFor(C => C.Valid, new { @id = "Valid", @class = "form-control", @TabIndex = 2, @size = "31", @readonly = "readonly" })
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <div style="height:30px;"></div>

                            @*  <!-- new table--> *@
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="tabs-container">
                                        <ul class="nav nav-tabs">
                                            <li class="active"><a href="#tab-1" data-toggle="tab">Commission Details</a></li>

                                        </ul>
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab-1">
                                                <!-- 1st tab  -->
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="btn-group">
                                                            <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow()" class="btn sbold green" /></p>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                                        <table class="table table-striped table-hover" id="dataTable">
                                                            <thead>
                                                                <tr>
                                                                    <th>Item</th>
                                                                    <th>Unit</th>
                                                                    <th>Commission Type</th>
                                                                    <th>Commission Value</th>

                                                                </tr>
                                                            </thead>
                                                            <tbody id="tbBooks">
                                                                @{

                                                                    int i = 0;
                                                                    int j = 0;


                                                                    foreach (var item in Model.colst.ToList())
                                                                    {
                                                                        <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                                            <td>
                                                                                @Html.DropDownListFor(o => o.colst[i].item, Model.colst[i].ilst, " -- Please Select -- ", new { @id = "ddlitem"+i, @Class = "form-control _select newcss", style = "width: 200px;", @TabIndex = 1,onchange="changeItem(value,"+i+")" })

                                                                            </td>

                                                                            <td>
                                                                                @Html.TextBoxFor(o => o.colst[i].unit ,   new { @id = "ddlUnit"+i, @Class = "form-control newcss", style = "width: 120px;", @TabIndex = 1,@readonly="readonly" })

                                                                            </td>
                                                                           
                                                                            
                                                                            <td>

                                                                                @Html.DropDownListFor(o => o.colst[i].type, Model.colst[i].commtypelst, " -- Please Select -- ", new { @id = "ddltype"+i, @Class = "form-control _select newcss", style = "width: 200px;", @TabIndex = 1 })

                                                                            </td>
                                                                            <td>
                                                                                @Html.TextBoxFor(o => o.colst[i].val, new { @id = "txtval" + i, @class = "form-control", style = "width: 150px;" })

                                                                            </td>
                                                                            <td>
                                                                                @Html.HiddenFor(o => o.colst[i].Isvalid, new { @id = "Isvalid" + i })
                                                                                <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="colst.Index" type="hidden" value="@(i)" />
                                                                            </td>
                                                                        </tr>
                                                                        i = i + 1;
                                                                        j = j + 1;
                                                                    }
                                                                }

                                                            </tbody>
                                                        </table>

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="tab-pane" id="tab-2">
                                                <!-- 2nd tab  -->
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="btn-group">
                                                            <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow1()" class="btn sbold green" /></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                </div>
                            </div>


                            <div class="col-lg-10"></div>
                            <button type="submit" name="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave" value="Save" tabindex="18">Save</button>
                            <a button class="btn btn-danger" type="submit" href="@Url.Action("ListCommission", "Commission")">Cancel</a>

                        </form>
                    }
                </div>

            </div>

        </div>

    </div>

    <script>
        $(function () {
            $('._select').select2();
        });

        $('.form_date').datetimepicker({
            //   language:  'fr',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
        
     function changeItem(ItemId, i) {
        $.ajax({
            url: 'GetUnitDetail',
            data: { "ItemId": ItemId },
            type: "GET",
            success: function (result) {
                
                document.getElementById("ddlUnit" + i).value = result.unit;
            },
            error: function () {
                alert("Data Not Found");
            }
        });
    }
        function AddRow() {
            var opt = "";
            var opt1 = "";
            var opt2 = "";
            $.ajax({
                type: "POST",
                url: 'GetItemJSON1',
                success: function (data) {

                    $.each(data, function () {
                        opt += "<option value=" + this.value + ">" + this.text + "</option>";
                    });
                    $.ajax({
                        type: "POST",
                        url: 'GetItemJSON',
                        success: function (data) {

                            $.each(data, function () {
                                opt1 += "<option value=" + this.value + ">" + this.text + "</option>";
                            });
                            $.ajax({
                                type: "POST",
                                url: 'GetItemJSON2',
                                success: function (data) {

                                    $.each(data, function () {
                                        opt2 += "<option value=" + this.value + ">" + this.text + "</option>";
                                    });
                                    AppendRow(opt, opt1, opt2);
                }
            })  }
            })  }
            })
        }
                function AppendRow(opt, opt1, opt2) {
            var index = $("#tbBooks").children("tr").length;

            var Item = "<td><select style = 'width: 200px;' class='form-control _select newcss' id='ddlitem" + index + "' name='colst[" + index + "].item' ,onchange='changeItem(value,"+index+")' ><option value=''>Please select</option>" + opt + "</select></td>";

            var unit = "<td><input class='form-control' id='txtUnit" + index + "' name='colst[" + index + "].unit'  style='width: 120px;' type='text' readonly='true' /></td>";

            var CommissionType = "<td><select style = 'width: 200px;' class='form-control _select newcss' id='ddltype" + index + "' name='colst[" + index + "].unit'><option value=''>Please select</option>" + opt2 + "</select></td>";

            var CommissionValue = "<td><input class='form-control' id='txtval" + index + "' name='colst[" + index + "].paraval'  style='width: 150px;' type='text' /></td>";

            var removeCell = "<td><input id='Isvalid" + index + "' name='colst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='Prolst.Index' type='hidden' value='" + index + "'  /></td>";

            var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Item + unit + CommissionType + CommissionValue + removeCell + "</tr>";
            //alert(Packing);
            $("#tbBooks").append(newRow);

            $(".chosen-select").chosen();
            $(function () {
                $('._select').select2();
            });
        }
        function removeRow(id) {
            var table = document.getElementById("dataTable");
            var rowCount = table.rows.length;
            var row = document.getElementById('trBook' + id);
            var j = 0;
            $('tr.chkitemlst').each(function () {
                if ($(this).css('display') !== 'none') {
                    j += 1;
                }
            });
            if (j > 1) {
                row.style.display = "none";
                document.getElementById('Isvalid' + id).value = "N";
            }
            else {
                alert("Cannot delete all the rows.")
            }
        }

            $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;

            if (document.getElementById("txtID").value == ""||document.getElementById("txtID").value == 0) {
                isValid = false;
                $(txtID).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Doc Id");
                return false;
            }
            else {
                $(txtID).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("DOB").value == ""||document.getElementById("DOB").value == 0) {
                isValid = false;
                $(DOB).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Doc Date");
                return false;
            }
            else {
                $(DOB).css({
                    "border": "",
                    "background": ""
                });
            }

             if (document.getElementById("txtCode").value == ""||document.getElementById("txtCode").value == 0) {
                isValid = false;
                $(txtCode).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Commission Code");
                return false;
            }
            else {
                $(txtCode).css({
                    "border": "",
                    "background": ""
                });
            }
             if (document.getElementById("txtDesc").value == ""||document.getElementById("txtDesc").value == 0) {
                isValid = false;
                $(txtDesc).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Commission Desc");
                return false;
            }
            else {
                $(txtDesc).css({
                    "border": "",
                    "background": ""
                });
            }
            if (isValid == false)
                e.preventDefault();

        });

    });
    </script>