                                    <a href="@Url.Action("Company","Company")" class="btn  btn-round btn-primary" style="float: right; color:white;">Add Company</a>
                                    <br>
                                </div>

                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-10 ">
                                <div id="grid">
                                </div>
                            </div>
                        </div>

                    </form>
