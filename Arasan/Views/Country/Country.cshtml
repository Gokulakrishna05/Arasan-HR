@model Arasan.Models.Country

@{
    ViewData["Title"] = "Country";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a href="@Url.Action("ListCountry", "Country")">Country</a> </li>
            <li class="active"> <strong>Country </strong> </li>
        </ol>
    </div>
</div>


<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                  
                   
                    <hr>
                      @using (Html.BeginForm("Country", "Country", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                    <form>
                        
                            <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Country Name<label class="mandatory">*</label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.ConName, new { @id = "txtConName", @class = "form-control", @TabIndex = 1 })<br />
                                            @Html.HiddenFor(C => C.ID)
                                            @Html.HiddenFor(C => C.createby)
                                    </div>

                                </div>
                            </div>
                        </div>
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Country code<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.ConCode, new { @id = "txtConCode", @class = "form-control", @TabIndex = 1 })<br />

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Currency<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">

                                            @Html.DropDownListFor(C => C.Curr, Model.Cur, "Please Select", new { @id = "ddlLocation", @Class = "form-control _select", @TabIndex = 1 })
                                            @Html.HiddenFor(C => C.ID)

                                        </div>

                                    </div>
                                </div>
                            </div>
                          
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="btn-group">
                                            <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow()" class="btn sbold green" /></p>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">

                                        <table class="table table-striped table-hover" id="dataTable1">
                                            <thead>
                                                <tr>

                                                    <th>Port Code </th>
                                                    <th>Port Name</th>
                                                    <th>Port Pincode</th>
                                                    <th>State Of Port</th>

                                                </tr>
                                            </thead>
                                            <tbody id="tbBooks">
                                                @{

                                                    int j = 0;

                                                foreach (var item in Model.Curlst.ToList())
                                                    {

                                                        <tr id="trBook@(j)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                            
                                                           <td>
                                                            @Html.TextBoxFor(o => o.Curlst[j].pcode, new { @id = "pcode" + j, @class = "form-control", style = "width: 200px;", onchange = "changeItem(this.value," + j + ")" })
                                                            </td>
                                                            <td>
                                                            @Html.TextBoxFor(o => o.Curlst[j].pnum, new { @id = "pnum" + j, @class = "form-control", style = "width: 200px;", onchange = "changeItem(this.value," + j + ")" })
                                                            </td>
                                                            <td>
                                                            @Html.TextBoxFor(o => o.Curlst[j].ppin, new { @id = "ppin" + j, @class = "form-control", style = "width: 200px;", onchange = "changeItem(this.value," + j + ")" })
                                                            </td>
                                                            <td>
                                                            @Html.DropDownListFor(o => o.Curlst[j].psta, Model.Curlst[j].pur, "Please Select", new { @class = "form-control _select newcss", @id = "psta" + j, style = "width: 200px;" })
                                                            </td>
                                                            <td>
                                                            @Html.HiddenFor(o => o.Curlst[j].Isvalid, new { @id = "Isvalid" + j })
                                                            <img onclick="removeRow(@(j));" src="../Images/delete.png" style="cursor:pointer" /> <input name="Curlst.Index" type="hidden" value="@(j)" />
                                                            </td>
                                                        </tr>
                                                        j = j + 1;

                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>

                             <div style="height:30px;"></div>
                        <div class="col-lg-8"></div>
                              
                          <button type="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave">Submit</button>
                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListCountry", "Country")'">Cancel</button>
 
                       

                    </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(function () {
        $('._select').select2();
    });
    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;

            if (document.getElementById("txtConName").value == "") {
                isValid = false;
                $(txtConName).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Country Name");
                return false;
            }
            else {
                $(txtConName).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtConCode").value == "") {
                isValid = false;
                $(txtConCode).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Country code");
                return false;
            }
            else {
                $(txtConCode).css({
                    "border": "",
                    "background": ""
                });
            }


            if (isValid == false)
                e.preventDefault();

        });

    });

    function AddRow() {
        var opt = "";
        $.ajax({
            type: "POST",
            url: 'GetItemJSON',
            success: function (data) {

                $.each(data, function () {
                    opt += "<option value=" + this.value + ">" + this.text + "</option>";
                });
                AppendRow(opt);
            }
        })
    }
    function AppendRow(opt) {
        var index = $("#tbBooks").children("tr").length;

        var pocode = "<td><input class='form-control' id='pcode" + index + "' name='Curlst[" + index + "].pcode'  style='width: 200px;' type='text' /></td>";

        var ponum = "<td><input class='form-control' id='pnum" + index + "' name='Curlst[" + index + "].pnum'  style='width: 200px;' type='text' /></td>";

        var popin = "<td><input class='form-control' id='ppin" + index + "' name='Curlst[" + index + "].ppin'  style='width: 200px;' type='text' /></td>";

        var posta = "<td><select style = 'width: 200px;' class='form-control _select newcss' id='psta" + index + "' name='Curlst[" + index + "].psta'><option value=''>Please select</option>" + opt + "</select></td>";


        var removeCell = "<td><input id='Isvalid" + index + "' name='Curlst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='Prolst.Index' type='hidden' value='" + index + "'  /></td>";

        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + pocode + ponum + popin + posta+ removeCell + "</tr>";
        //alert(Packing);
        $("#tbBooks").append(newRow);

        $(".chosen-select").chosen();
        $(function () {
            $('._select').select2();
        });
    }
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
    }
</script>