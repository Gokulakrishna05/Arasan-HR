@model Arasan.Models.Country

@{
    ViewData["Title"] = "Index";
}
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong>Country Master</strong> </li>
        </ol>
    </div>
</div>


<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">Country Master</h5>
                    <hr>
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Country code<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                    <select class=" _select js-states form-control">

                                        <option> </option>
                                        <option value="CH">	IN </option>
                                        <option value="KA">	JO </option>
                                        <option value="TAAI">USA </option>

                                    </select><br />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Country Name<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                        <select class=" _select js-states form-control">

                                            <option> </option>
                                            <option value="CH">	India </option>
                                            <option value="KA">	Japan </option>
                                            <option value="TAAI">United States </option>

                                        </select><br />
                                    </div>

                                </div>
                            </div>
                        </div>
                            <div style="height:30px;"></div>
                           <a button type="submit" class="btn aqua m-t-xs bottom15-xs" href="@Url.Action("ListCountry", "Country")">Submit</a>
                            <a button class="btn btn-danger" type="submit" href="@Url.Action("ListCountry", "Country")">Cancel</a>

                       

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>