@model IEnumerable<Arasan.Models.Country>

@{
    ViewData["Title"] = "Country ";
    string query = ViewContext.HttpContext.Request.Query["status"];
    string Qid = string.Empty;
    if (!string.IsNullOrEmpty(query)) { Qid = ViewContext.HttpContext.Request.Query["status"]; }
}

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong>Country </strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <form>
                        <div class="row">
                            <div class="col-md-6 ">
                                <select style='width: 200px;' class='form-control  newcss' id="dllstatus" onchange="changeStatus(this.value)">
                                    <option value='ACTIVE'>Open</option>
                                    <option value='INACTIVE'>Close</option>
                                    @* <option value='InActive'>Disabled</option>*@
                                </select>
                            </div>
                            <div class="col-md-12 ">
                                <div class=" textalignright">
                                    <a href="@Url.Action("Country", "Country")" class="btn  btn-round btn-primary" style="float: right; color:white;">Add Country </a>
                                    <br>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">

                                    <div class="ibox-content collapse in">
                                        <div class="widgets-container">
                                            <div>
                                                <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>S.No</th>
                                                           
                                                            <th>Country Name</th>
                                                            <th>Country Code</th>
                                                            <th>Edit</th>
                                                            <th>Close</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody>
                                                        @{
                                                            int i = 1;
                                                            foreach (var item in Model)
                                                            {
                                                                    <tr>
                                                                        <td>@i</td>
                                                                        <td>@Html.DisplayFor(modelItem => item.ConName) </td>
                                                                        <td>@Html.DisplayFor(modelItem => item.ConCode)</td>
                                                                    @if (item.status == "INACTIVE")
                                                                    {
                                                                        <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("Country", "Country",new { id=item.ID })"></a></div></td>
                                                                        <td> <a href="@Url.Action("Remove","Country",new {tag="Del",id=item.ID})" onclick="return confirm('Are you sure you want to close this record?');"><img src='../Images/Inactive.png' alt='Deactivate' /></a></td>
                                                                    }
                                                                    else
                                                                    {

                                                                    <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("Country", "Country",new { id=item.ID })"></a></div></td>
                                                                    <td> <a href="@Url.Action("DeleteMR","Country",new {tag="Del",id=item.ID})" onclick="return confirm('Are you sure you want to close this record?');"><img src='../Images/Inactive.png' alt='Deactivate' /></a></td>
                                                                    }
                                                                </tr>
                                                                i++;
                                                            }
                                                            }
                                                            
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
