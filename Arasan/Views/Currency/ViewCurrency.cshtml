@model Arasan.Models.Currency

@{
    Layout = "_PopupLayout";
    ViewData["Title"] = "Index";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a href="@Url.Action("ListCurrency", "Currency")">Currency</a> </li>
            <li class="active"> <strong>Currency </strong> </li>
        </ol>
    </div>
</div>


<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <hr>
                    @using (Html.BeginForm("Currency", "Currency", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>

                          
                                        <br>

                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Symbol<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.CurrencyCode, new { @id = "txtCurrencyCode", @class = "form-control", @TabIndex = 1 })<br />
                                            @Html.HiddenFor(C => C.ID)
                                            @Html.HiddenFor(C => C.createby)

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Currency Name<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.CurrencyName, new { @id = "txtCurrencyName", @class = "form-control", @TabIndex = 1 })<br />

                                        </div>

                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br />   <label for="inputName3" class="col-sm-4 control-label">Currency Code<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.CurrencyCodes, new { @id = "CurrencyCodes", @class = "form-control", @TabIndex = 1 })
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br />   <label for="inputName3" class="col-sm-4 control-label">Currency Integer<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.CurrencyInteger, new { @id = "CurrencyInteger", @class = "form-control", @TabIndex = 1, onkeydown = "return isNumeric2(event.keyCode,this.value)" })
                                        </div>

                                    </div>
                                </div>



                            </div>


                            @*     table *@


                            <div class="tabs-container">
                                <ul class="nav nav-tabs">
                                    <li class="active"></li>
                                    <li class="tab-pane active"><a href="#tab-1" data-toggle="tab">Currency Information</a></li>
                                    <li><a href="#tab-2" data-toggle="tab">Currency Rate Details</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab-1">
                                        @*1st atb*@
                          

                           


                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">

                                    <table class="table table-striped table-hover" id="dataTable">

                                        <thead>
                                            <tr>

                                                <th>ConCode </th>
                                                <th>Country</th>

                                            </tr>
                                        </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int j = 0;

                                                foreach (var item in Model.Currencylst.ToList())
                                                {

                                                    <tr id="trBook@(j)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                        <td>
                                                            @Html.DisplayFor(o => o.Currencylst[j].ConCode, new { @class = "form-control _select newcss", @id = "ConCode" + j, style = "width: 200px;", onchange = "changeItem(value," + j + ")" })

                                                        </td>

                                                        <td>


                                                            @Html.DisplayFor(o => o.Currencylst[j].Country, new { @id = "Country" + j, @class = "form-control", style = "width: 200px;", @readonly = "readonly" })

                                                        </td>


                                                       

                                                    </tr>
                                                    j = j + 1;

                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>

                                    </div>




                                    @* tab2 *@
                                    <div class="tab-pane " id="tab-2">
                                        
                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">

                                    <table class="table table-striped table-hover" id="dataTable1">

                                        <thead>
                                            <tr>

                                                <th>ExRate </th>
                                                <th>RateDt</th>

                                            </tr>
                                        </thead>
                                        <tbody id="tb1Books">
                                            @{

                                                int k = 0;

                                                foreach (var item in Model.UsedCurrencieslst.ToList())
                                                {

                                                    <tr id="trBook@(k)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                        <td>
                                                                            @Html.DisplayFor(o => o.UsedCurrencieslst[k].exrate)

                                                        </td>

                                                        <td>


                                                                            @Html.DisplayFor(o => o.UsedCurrencieslst[k].ratedt)

                                                        </td>


                                                       

                                                    </tr>
                                                    k = k + 1;

                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                            </div>
                            </div>


                          

                                       

                                                        

                                    </div>
                           

                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


