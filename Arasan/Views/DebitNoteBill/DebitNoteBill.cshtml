        var Item = "<td><input class='form-control' id='txtItem" + index + "' name='Depitlst[" + index + "].Item'  style='width: 130px;' type='text'  readonly='True' /></td>";

        var Cf = "<td><input class='form-control' id='txtCf" + index + "' name='Depitlst[" + index + "].Cf'  style='width: 130px;' type='text'  readonly='True' /></td>";

        var Unit = "<td><input class='form-control' id='txtUnit" + index + "' name='Depitlst[" + index + "].Unit'  style='width: 130px;' type='text'  readonly='True' /></td>";

        var Qty = "<td><input class='form-control' id='txtQty" + index + "' name='Depitlst[" + index + "].Qty'  style='width: 130px;' type='text'   /></td>";
       
        var Rate = "<td><input class='form-control' id='txtRate" + index + "' name='Depitlst[" + index + "].Rate' style='width: 130px;' type='text' readonly='True' /></td>";
       
        var Amount = "<td><input class='form-control' id='txtAmount" + index + "' name='Depitlst[" + index + "].Amount' style='width: 130px;' type='text' readonly='True' /></td>";
       
