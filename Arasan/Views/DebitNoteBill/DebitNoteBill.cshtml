        var SGST = "<td><input class='form-control' id='txtSGST" + index + "' name='Depitlst[" + index + "].SGST'  style='width: 130px;' type='text' readonly='True' /></td>";
        
        var IGST = "<td><input class='form-control' id='txtIGST" + index + "' name='Depitlst[" + index + "].IGST'  style='width: 130px;' type='text' readonly='True'  /></td>";
        
