@model Arasan.Models.Department

@{
    ViewData["Title"] = "Department";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong> Department </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <hr>
                    @using (Html.BeginForm("Departments", "Departments", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>

                              <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Department Code<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.DepartmentCode, new { @id = "txtDepartmentCode", @class = "form-control",autocomplete="off" , @TabIndex = 2, @size="30" })<br>

                                            @* for edit & delete*@
                                            @Html.HiddenFor(C => C.ID)
                                        </div>
                                    </div>
                                </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3"></div>
                                    <div class="col-md-6">
                                      <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Department Name<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.DepartmentName, new { @id = "txtDepartmentName", @class = "form-control",autocomplete="off",@TabIndex = 2, @size="30" })<br>
                                        </div>
                                    

                                      </div>
                                    </div>
                                </div>

                                 <div class="row">
                                   <div class="col-lg-3"></div>
                                    <div class="col-md-6">
                                       <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Description<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                           @Html.TextBoxFor(C => C.Description, new { @id = "txtDescription", @class = "form-control",autocomplete="off" , @TabIndex = 2, @size="30" })<br><br><br>
                                        </div>
                                       </div>
                                   </div>
                                 </div>
                            <div class="row">
           <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:200px;">
                                               
                                                                    <table class="table table-striped table-hover" id="dataTable">
                                                    <thead>
                                                        <tr>

                                                            <th>S.No</th>
                                                            <th>Designation</th>

                                                        </tr>

                                                    </thead>


                                                    
                                                    <tbody id="tbBooks">
                                                        @{
                                                            int i = 1;
                                                            int j = 0;
                                                            foreach (var item in Model.Designationlst.ToList())
                                                            {
                                                                <tr id="trBook@(j)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">
                                                                    <td> @i</td>
                                                        <td>@Html.TextBoxFor(o => o.Designationlst[j].Design, new { @id = "txtDesignation" + j, @class = "form-control", style = "width: 200px;text-align:right" })</td>
                                                                    <td>
                                                                        @Html.HiddenFor(o => o.Designationlst[j].Isvalid, new { @id = "Isvalid" + j })
                                                                          <img onclick="removeRow(@(j));" src="../Images/delete.png" style="cursor:pointer" /> 
                                                                               </td>
                                                                    
                                                                </tr>

                                                                j = j + 1;
                                                                i++;
                                                            }
                                                        }
                                                    </tbody>



                                                    
                                                </table>
                                            </div>
                                        </div>
                                     
                               


                            <div style="height:30px;"></div>
                            <div class="col-lg-10"></div>
                            <button type="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave">Submit</button>
                            <a button class="btn btn-danger" type="submit" href="@Url.Action("ListDepartment", "Departments")">Cancel</a>


                        </form>
                    }

                </div>

            </div>

        </div>

    </div>

</div>




                       

<script>
    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
</script>

<script>

    $(function () {
        $('._select').select2();
    });

    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;

            if (document.getElementById("txtDepartmentCode").value == "") {
                isValid = false;
                $(txtDepartmentCode).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Department Code");
                return false;
            }
            else {
                $(txtDepartmentCode).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtDepartmentName").value == "") {
                isValid = false;
                $(txtDepartmentName).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Department Name");
                return false;
            }
            else {
                $(txtDepartmentName).css({
                    "border": "",
                    "background": ""
                });
            }
             
            if (document.getElementById("txtDescription").value == "") {
                isValid = false;
                $(txtDescription).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Description");
                return false;
            }
            else {
                $(txtDescription).css({
                    "border": "",
                    "background": ""
                });
            }


            if (isValid == false)
                e.preventDefault();

        });

    });

</script>