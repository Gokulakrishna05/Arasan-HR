@model Arasan.Models.Department

@{
    ViewData["Title"] = "Department";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Privileges</a> </li>
            <li class="active"> <strong> Department </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <hr>
                    @using (Html.BeginForm("PDept", "Departments", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>

                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Department Name<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.DepartmentName, new { @id = "txtDepartmentName", @class = "form-control",autocomplete="off",@TabIndex = 2, @size="30" })<br>

                                            @* for edit & delete*@
                                            @Html.HiddenFor(C => C.ID)
                                            @Html.HiddenFor(C => C.createby)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Position<label class="mandatory"></label></label>

                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Pos, new { @id = "txtpos", @class = "form-control",autocomplete="off" , @TabIndex = 2, @size="30" ,onkeydown = "return isNumeric2(event.keyCode,this.value)"})<br>
                                        </div>


                                    </div>
                                </div>
                            </div>

                            
                          

                            <div style="height:30px;"></div>
                            <div class="col-lg-7"></div>
                            <button type="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave">Submit</button>
                            <a button class="btn btn-danger" type="submit" href="@Url.Action("ListPDept", "Departments")">Cancel</a>


                        </form>
                    }

                </div>

            </div>

        </div>

    </div>

</div>

<script>

    $(function () {
        $('._select').select2();
    });

    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;

            
            if (document.getElementById("txtDepartmentName").value == "") {
                isValid = false;
                $(txtDepartmentName).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Department Name");
                return false;
            }
            else {
                $(txtDepartmentName).css({
                    "border": "",
                    "background": ""
                });
            }

          

            if (isValid == false)
                e.preventDefault();

        });

    });

</script>