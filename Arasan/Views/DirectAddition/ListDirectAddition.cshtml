@model IEnumerable<Arasan.Models.DirectAddition>

@{
    ViewData["Title"] = "DirectAddition";
    string query = ViewContext.HttpContext.Request.Query["status"];
    string Pid = string.Empty;
    if (!string.IsNullOrEmpty(query)) { Pid = ViewContext.HttpContext.Request.Query["status"]; }
}
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong>Direct Addition</strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <select style='width: 200px;' class='form-control  newcss' id="dllstatus" onchange="changeStatus(this.value)">
                                    <option value='ACTIVE'>Open</option>
                                    <option value='ISACTIVE'>Close</option>
                                    @*<option value='InActive'>Disabled</option>*@
                                </select>
                            </div>
                            <div class="col-md-12 ">
                                <div class=" textalignright">
                                    <a href="@Url.Action("DirectAddition","DirectAddition")" class="btn  btn-round btn-primary" style="float: right; color:white;">Add DirectAddition</a>
                                    <br>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content collapse in">
                                        <div class="widgets-container">
                                            <div>
                                                <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                                    <thead>
                                                        <tr>
                                                           
                                                            <th>Branch </th>
                                                            <th>Document ID</th>
                                                            <th>Document Date</th>
                                                            <th>View</th>
                                                            <th>Delete</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody>
                                                         @{
                                                            int i = 1;

                                                            foreach (var item in Model)
                                                            {
                                                        <tr>
                                                                    <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                                                                    
                                                                    <td>@Html.DisplayFor(modelItem => item.DocId)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.Docdate)</td>
                                                                    @if (item.status == "ISACTIVE")
                                                                    {
                                                                        <td></td>
                                                                        <td> </td> 
                                                                    }
                                                                    else
                                                                    {
                                                                        //<td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("DirectAddition", "DirectAddition",new { id=item.ID })"></a></div></td>

                                                                        <td><div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("ViewDirectAddition", "DirectAddition",new { id=item.ID })" class='fancybox' data-fancybox-type='iframe'><img src='../Images/view_icon.png' alt='Waiting for approval' /></a></div></td>

                                                                      <td> <a href="@Url.Action("DeleteMR","DirectAddition",new {tag="Del",id=item.ID})" onclick="return confirm('Are you sure you want to close this record?');"><img src='../Images/Inactive.png' alt='Deactivate' /></a></td>
                                                                     }         
                                                                    </tr>
                                                                i++;
                                                            }
                                                        }
                                                        @*<tr>
                                                            <td>2</td>
                                                            <td>SGST</td>
                                                            <td>2%</td>
                                                            <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("tax", "tax")"></a></div></td>
                                                            <td> <div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-trash" aria-hidden="true" href="@Url.Action("tax", "tax")"></a></div></td>
                                                        </tr>
                                                        <tr>
                                                            <td>3</td>
                                                            <td>IGST</td>
                                                            <td>10%</td>
                                                            <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("tax", "tax")"></a></div></td>
                                                            <td> <div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-trash" aria-hidden="true" href="@Url.Action("tax", "tax")"></a></div></td>
                                                        </tr>*@
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

