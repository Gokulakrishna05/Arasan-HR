    function enableAllrepview() {

        if ($("#Selectallchk").prop('checked') == true) {
            var j = 0;
            $('tr.chkitemlst').each(function () {
                if ($(this).css('display') !== 'none') {

                    $('#drumslect' + j).prop('checked', true);

                }
                j += 1;
            });

        }
        else {
            var j = 0;
            $('tr.chkitemlst').each(function () {
                if ($(this).css('display') !== 'none') {

                    $('#drumslect' + j).prop('checked', false);

                }
                j += 1;
            });
        }
    }

    $("#button").click(function () {
        if (confirm('Are you sure want to Submit?') == true) {
        var ar1 = "";
        var ar2 = "";
        var tot = 0;
        var j = 0;
        var index=0
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                var checkBox = document.getElementById('drumslect' + j);
                if (checkBox.checked == true) {
                    var invid = document.getElementById('invid' + j).value;
                    var drumno = document.getElementById('drumno' + j).value;
                    var qty = document.getElementById('qty' + j).value;
                     var batch = document.getElementById('batchno' + j).value;


                      var Drum = "<td><input class='form-control' id='txtdrum" + index + "' name='Drumlst[" + index + "].drum'  style='width: 100px;' type='text'  readonly='True'  value=" + drumno + " /><input id='txtdrum" + index + "' name='Drumlst[" + index + "].drum' type='hidden'  value=" + drumno + "></td>";

                    var Batch = "<td><lable>"+batch+"</lable><input type='hidden' value='" + batch + "' id='txtbatchno" + index + "' name='Drumlst[" + index + "].batchno'></td>";

                    var Qty = "<td><input class='form-control' id='txtqty" + index + "' name='Drumlst[" + index + "].'qty  style='width: 80px;' type='text' readonly='True' value=" + qty + " onkeyup = 'changeQty(this, " + index + ")'  /><input id='txtqty" + index + "' name='Drumlst[" + index + "].qty' type='hidden'  value=" + qty + "></td>";

                    var removeCell = "<td><input id='Isvalid" + index + "' name='Drumlst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='Drumlst.Index' type='hidden' value='" + index + "'  /></td>";


                    var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Drum + Batch + Qty + removeCell + "</tr>";

                    $("#divreasult").append(newRow);

                    index +=1;
                }
            }
            j += 1;
        });
        window.parent.document.getElementById('tbBooks').innerHTML = document.getElementById('divreasult').innerHTML;
        window.parent.jQuery.fancybox.close();
        }
    });
