@model Arasan.Models.Drumhistory

@{
    ViewData["Title"] = "Drum History";
}
<style>

    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Production</a> </li>
            <li class="active"> <strong> Drum History</strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">Drum History</h5>
                    <hr>
                    @using (Html.BeginForm("Drumhistory", "DrumLocation", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br /><label for="inputName3" class="col-sm-4 control-label">Drum No.<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.DrumNo, new { @id = "txtDrumNo", @class = "form-control", @TabIndex = 2  })<br />
                                        </div>

                                    </div>
                                </div>

                                <div class="col-lg-2">
                                    <button type="button" class="btn  btn-round btn-primary" onclick="changesearch()" style="float: right; color:white;">Search </button>
                                </div>
                                <div class="col-lg-4">
                                    </div>
                            </div>

                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="btn-group">
                                        <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow()" class="btn sbold green" /></p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">

                                    @* <div class="ibox float-e-margins">*@

                                    <!-- / ibox-title -->
                                    @* <div id="demo3" class="ibox-content collapse in">
                                <div class="borderedTable">
                                <div class="table-scrollable">*@
                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>


                                                <th> Drum Location  </th>
                                                <th>Drum</th>
                                                <th> Type</th>
                                                 
                                                





                                            </tr>

                                        </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int i = 0;

                                                foreach (var item in Model.dumlst.ToList())
                                                {

                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">




                                                        
                                                        <td>
                                                            @Html.TextBoxFor(o => o.dumlst[i].Location, new { @id = "txtLocation" + i, @class = "form-control", style = "width: 80px;" , @readonly = "readonly"})
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.dumlst[i].Drum, new { @id = "txtConFac" + i, @class = "form-control", style = "width: 80px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)", @readonly = "readonly"})
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.dumlst[i].Type, new { @id = "txtReqQty" + i, @class = "form-control", style = "width: 80px;"})
                                                        </td>
                                                        
                                                        <td>
                                                            @Html.HiddenFor(o => o.dumlst[i].Isvalid, new { @id = "Isvalid" + i })
                                                            <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="EnqLst.Index" type="hidden" value="@(i)" />
                                                        </td>


                                                    </tr>
                                                    i = i + 1;

                                                }
                                            }

                                        </tbody>




                                    </table>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function changesearch(){
        var drumno=document.getElementById("txtDrumNo").value;
         $.ajax({
                    url: "GetDrumJSON",
                    type: "post",
                    data: {'drumno': drumno},
                    cache: false,
                    success: function (response) {
                        //var newlist;
                        //newlist = response.POlst;
                        //PopulateDropDown("#ddlPO", response);
                    },
                    error: function () {
                        debugger;
                        alert("Please Select Supplier");
                    }
                });
    }
</script>