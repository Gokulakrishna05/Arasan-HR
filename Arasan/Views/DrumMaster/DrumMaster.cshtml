     function AddCategory(category) {
  $.ajax({
            url: "GetCategoryJSON",
            type: "post",
            cache: false,
            success: function (response) {
                PopulateDropDown("#ddlCategory", response);
                $(ddlCategory).select2().val(category).trigger("change");
              //  document.getElementById("ddlCategory").value =category;
            },
            error: function () {
                alert("Please Select Drum Category");
            }
        });
    }

     function AddRow() {
        var opt = "";
        var remopt = "";
        $.ajax({
            type: "POST",
            url: 'GetLocJSON',
            success: function (data) {

                $.each(data, function () {
                    opt += "<option value=" + this.value + ">" + this.text + "</option>";
                });
          
                        AppendRow(opt, remopt);
                   

            }
        })


    }
     function AppendRow(opt) {
        var index = $("#tbBooks").children("tr").length;


        var Location = "<td><select style = 'width: 200px;' class='form-control _select newcss' id='ddlLocation" + index + "' name='Loclst[" + index + "].location' ><option value=''>Please select</option>" + opt + "</select></td>";

        var removeCell = "<td><input id='Isvalid" + index + "' name='Loclst[" + index + "].Isvalid1' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='Loclst.Index' type='hidden' value='" + index + "'  /></td>";

        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>"  + Location + removeCell + "</tr>";
        //alert(Packing);
        $("#tbBooks").append(newRow);

        $(function () {
            $('._select').select2();
        });
    }
     function removeRow1(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
    }
</script>