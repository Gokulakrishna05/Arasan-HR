                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Igst, new { @id = "txtIgst", @class = "form-control", @TabIndex = 2, @size="30",onkeydown = "return isNumeric2(event.keyCode,this.value)" })<br>
                                        </div>


                                    </div>
                                </div>
                            </div>

*@

