                            <a button class="btn btn-danger" type="submit" href="@Url.Action("ListETariff", "ETariff")">Cancel</a>

                        </form>


                    }
                </div>

            </div>

        </div>

    </div>

</div>
<script>
    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
</script>

<script>

    $(function () {
        $('._select').select2();
    });

    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;


            if (document.getElementById("txtTariff").value == "") {
                isValid = false;
                $(txtTariff).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter TariffID");
                return false;
            }
            else {
                $(txtTariff).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtTariffdes").value == "") {
                isValid = false;
                $(txtTariffdes).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Tariffdes");
                return false;
            }
            else {
                $(txtTariffdes).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtSgst").value == "") {
                isValid = false;
                $(txtSgst).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Sgst");
                return false;
            }
            else {
                $(txtSgst).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtCgst").value == "") {
                isValid = false;
                $(txtCgst).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Cgst");
                return false;
            }
            else {
                $(txtCgst).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtIgst").value == "") {
                isValid = false;
                $(txtIgst).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Igst");
                return false;
            }
            else {
                $(txtIgst).css({
                    "border": "",
                    "background": ""
                });
            }


            if (isValid == false)
                e.preventDefault();

        });

    });

</script>