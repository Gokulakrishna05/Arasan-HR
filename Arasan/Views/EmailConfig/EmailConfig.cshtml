                return false;
            }
            else {
                $(txtEmail).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtPassword").value == "") {
                isValid = false;
                $(txtPassword).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Password");
                return false;
            }
            else {
                $(txtPassword).css({
                    "border": "",
                    "background": ""
                });
            }
            //if (document.getElementById("txtSignature").value == "") {
            //    isValid = false;
            //    $(txtSignature).css({
            //        "border": "1px solid red",
            //        "background": "#FFCECE"
            //    });

            //    alert("Please Select Signature");
            //    return false;
            //}
            //else {
            //    $(txtSignature).css({
            //        "border": "",
            //        "background": ""
            //    });
            //}
           
            

            if (isValid == false)
                e.preventDefault();

        });

    });

</script>