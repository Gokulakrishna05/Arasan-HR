@model Arasan.Models.EmpLoginDetModel

@{
    Layout = "_PopupLayout";

    ViewData["Title"] = "Employee Login Detail";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a href="@Url.Action("EmpLoginDetlist", "EmpLoginDet")">HR</a> </li>
            <li class="active"> <strong>Employee Attendance Detail</strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">Employee LoginDetail</h5>
                    <hr>
                    @using (Html.BeginForm("EmpLoginDet", "EmpLoginDe8t", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>

                            <div class="row">
                                <div class="col-md-6">

                                    <div class="form-group">

                                        <br /><label for="inputName3" class="col-sm-4 control-label">Doc Id<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.DocId)
                                            @Html.HiddenFor(C => C.ID)
                                            <br />
                                        </div>
                                    </div>
                                </div>
                                <br /><label for="inputName3" class="col-sm-4 control-label">For Status<label class="mandatory"></label></label>
                                <br /><label for="inputName3" class="col-sm-4 control-label"> F-Full Day   &nbsp;&nbsp;&nbsp;&nbsp;      W-Week Off   &nbsp;&nbsp;&nbsp;&nbsp;    OD-On Duty<label class="mandatory"></label></label>
                                <br /><label for="inputName3" class="col-sm-4 control-label"> H-Half Day   &nbsp;&nbsp;&nbsp;&nbsp;    O-OT    &nbsp;&nbsp;&nbsp;&nbsp;    NH/OT-National Holiday with O.T <label class="mandatory"></label></label>


                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br /><label for="inputName3" class="col-sm-4 control-label">Doc.Date<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                                   @Html.DisplayFor(C => C.DocDate)
 
                                            <br />
                                        </div>

                                    </div>

                                </div>
                                <label for="inputName3" class="col-sm-4 control-label">
                                    L-Leave &nbsp;&nbsp;&nbsp;&nbsp; W/O-Week Off With O.T. <label class="mandatory"></label>
                                </label>
                                <br /><label for="inputName3" class="col-sm-4 control-label">A-Absent  &nbsp;&nbsp;&nbsp;&nbsp;      NH-National Holiday<label class="mandatory"></label></label>
                                <br /><label for="inputName3" class="col-sm-4 control-label">NH/W-NH With Week Off  &nbsp;&nbsp;&nbsp;&nbsp;    Left-Left from Service<label class="mandatory"></label></label>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br /><label for="inputName3" class="col-sm-4 control-label">Att.Date<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                                 @Html.DisplayFor(C => C.AttDate)
 
                                            <br />
                                        </div>

                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br /> <label for="inputName3" class="col-sm-4 control-label">Holiday Y/N? <label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            <div class="input-group">

                                                @Html.DisplayFor(C => C.Holiday)
                                              @*   <label id="mt-radio">Yes</label>&emsp;
                                                @Html.RadioButtonFor(C => C.Holiday, "N", new { @TabIndex = 3 })
                                                <label id="mt-radio">No</label> *@


                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br /><label for="inputName3" class="col-sm-4 control-label">Month<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.Month, new { @id = "Month", @Class = "form-control _select newcss", @TabIndex = 1 })
                                            <br />
                                            <br />
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br /> <label for="inputName3" class="col-sm-4 control-label">Pay Category<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.PayCategory , new { @id = "EmpCategory", @Class = "form-control _select newcss", @TabIndex = 1 })
                                            <br />
                                            <br />
                                        </div>
                                    </div>

                                </div>
                            </div>






                            @* Table *@

                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">


                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>

                                                <th>Employee Name</th>
                                                <th>Mission/Mo</th>
                                                <th>OD Taken</th>
                                                <th>OD Hrs</th>
                                                <th>Week Off.</th>
                                                <th>Shift Log In Date</th>
                                                <th>Shift Log In Time</th>
                                                <th>Log In[Date]</th>
                                                <th>Log In[Time]</th>
                                                <th>Shift Log Out Date</th>
                                                <th>Shift Log Out Time</th>
                                                <th>Log Out[Date]</th>
                                                <th>Log Out[Time]</th>
                                                <th>InttDiff</th>
                                                <th>OutDiff/Mo</th>
                                                <th>Time Diff.</th>
                                                <th>rmission Av</th>
                                                <th>WHrs1</th>
                                                <th>WHrs2</th>
                                                <th>Worked Hours</th>
                                                <th>HA</th>
                                                <th>OT Hours</th>
                                                <th>ensation Re</th>
                                                <th>Status</th>


                                            </tr>

                                        </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int i = 0;

                                                foreach (var item in Model.EmpLoginDetlists.ToList())
                                                {
                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">



                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].EmpName , new { @class = "form-control _select newcss", @id = "txtEmpName" + i, style = "width: 100px;", onchange = "changeItem(this.value," + i + ")" })

                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].Mission, new { @id = "txtMission" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].ODTaken, new { @id = "txtODTaken" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].ODHrs, new { @id = "txtODHrs" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].WeekOff , new { @class = "form-control _select newcss", @id = "txtWeekOff" + i, style = "width: 200px;" })

                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].ShiftLoginDate, new{ style = "width: 500px;"})
                                                         </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].ShiftLoginTime, new { style = "width: 200px;" })
                                                                
                                                         </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].LoginDate, new { style = "width: 500px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].LoginTime, new { style = "width: 200px;" })
 
                                                         </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].ShiftLogoutDate, new { style = "width: 500px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].ShiftLogoutTime, new { style = "width: 200px;" })
                                                                
                                                         </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].LogoutDate, new { style = "width: 00px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].LogoutTime, new { style = "width: 200px;" })
                                                         </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].IntDiff, new { style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].OuttDiff, new { @id = "txtOuttDiff" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].TimeDiff, new { @id = "txtTimeDiff" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].rmission, new { @id = "txtrmission" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].WHrs1, new { @id = "txtWHrs1" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].WHrs2, new { @id = "txtWHrs2" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].WorkedHrs, new { @id = "txtWorkedHrs" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].HA , new { @class = "form-control _select newcss", @id = "txtWeekOff" + i, style = "width: 200px;" })

                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].OTHrs, new { @id = "txtOTHrs" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].ensation, new { @id = "txtensation" + i, @class = "form-control", style = "width: 200px;" })
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.EmpLoginDetlists[i].Status , new { @class = "form-control _select newcss", @id = "txtStatus" + i, style = "width: 200px;"})

                                                        </td>
                                                        <td>
                                                            @Html.HiddenFor(o => o.EmpLoginDetlists[i].Isvalid, new { @id = "Isvalid" + i })
                                                            <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="EmpLoginDetlists.Index" type="hidden" value="@(i)" />
                                                        </td>

                                                    </tr>
                                                    i = i + 1;


                                                }
                                            }

                                        </tbody>




                                    </table>
                                </div>
                            </div>
                              </form>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

 