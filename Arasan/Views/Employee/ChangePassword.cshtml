@model Arasan.Models.Employee

@{
    ViewData["Title"] = "Change Password";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<script type="text/javascript">
    @if (TempData["notice"] != null)
