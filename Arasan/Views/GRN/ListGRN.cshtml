 @model IEnumerable<Arasan.Models.GRN>

@{
    ViewData["Title"] = "GRN";
}
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Transaction</a> </li>
            <li class="active"> <strong>GRN</strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                  
                    <form>


<div class="row">
          <div class="col-lg-12">
            <div class="ibox float-e-margins">
              
              <div class="ibox-content collapse in">
                <div class="widgets-container">
                  <div >
                    <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                      <thead>
                        <tr>
                          <th>Branch</th>
                          <th>Supplier Name</th>
                          <th>GRN No.</th>
                          <th>GRN Date</th>
                          <th>PO No.</th>
                          <th>Currency</th>
                          <th>Status</th>
                          <th>Account</th>
                          <th>Edit</th>
                          <th>Delete</th>
                        </tr>
                      </thead>
                   
                      <tbody>
                            @{
                                                            int i = 1;


                                                            foreach (var item in Model)
                                                            {
                                                                

                                <tr>
                                                                            <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                                                                            <td>@Html.DisplayFor(modelItem => item.Supplier)</td>
                                                                            <td>@Html.DisplayFor(modelItem => item.GRNNo)</td>
                                                                            <td>@Html.DisplayFor(modelItem => item.GRNdate)</td>
                                                                            <td>@Html.DisplayFor(modelItem => item.PONo)</td>
                                                                            <td>@Html.DisplayFor(modelItem => item.Cur)</td>
                                                                             <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                                                               @if(item.Status == "GRN Completed"){
                                                               <td> <div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("GRNAccount", "GRN",new { ItemID=item.ID })" class="fancybox" data-fancybox-type="iframe"><img src='../Images/checklist.png' alt='' /></a></div></td>
                                                                <td></td>
                                                                <td></td>
                                                                
                                                                 }
                                                                    else{
                                                                      <td></td>  
                                                                    <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("GRN", "GRN",new { id=item.ID })"></a></div></td>
                                                                    <td> <div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-trash" aria-hidden="true" href="@Url.Action("GRN", "GRN",new { id=item.ID })"></a></div></td>
                                                                    
                                                                    }

                                                                        
                                 </tr>

                                                                i++;
                                                            }
                                                        }
                     
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    
                          
                                 
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

                          <script>
                              $(document).ready(function() {
                                $('#example7').DataTable({
                dom: 'Bfrtip',
                buttons: [{
                    text: 'copy',
                    extend: "copy",
