@model Arasan.Models.HSNcode

@{
    ViewData["Title"] = "Index";
}

<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong>HSN Code </strong> </li>
        </ol>
    </div>
</div>


<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                   
                    <hr>
                    @using (Html.BeginForm("HSNcode", "HSNcode", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                    <form>
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-md-6">
                                <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">HSN Code<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.HCode, new { @id = "txtHCode",autocomplete="off", @class = "form-control", @TabIndex = 1,@onkeydown = "return isNumeric2(event.keyCode,this.value)" })<br />
                                        </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-md-6">
                                <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Description<label class="mandatory"></label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Dec, new { @id = "txtDec", @class = "form-control", @TabIndex = 1,autocomplete="off" })<br />
                                    </div>
                                </div>
                            </div>
                        </div>
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">CGST%<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.CGst, new { @id = "txtCGST", @class = "form-control", @TabIndex = 1,autocomplete="off" })<br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                              <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">SGST%<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.SGst, new { @id = "txtSGST", @class = "form-control", @TabIndex = 1,autocomplete="off" })<br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">IGST%<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.IGst, new { @id = "txtIGST", @class = "form-control", @TabIndex = 1,autocomplete="off" })<br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                        <button type="submit" name="submit" class="btn btn-success" id="btnSave" value="Save" tabindex="18">Insert</button>
                                        <input type="reset" class="btn btn-primary" value="Reset">
                                    <a button class="btn btn-danger" type="submit"  href="@Url.Action("ListHSNcode", "HSNcode")"> Cancel </a>
                                </div>
                            </div>
                        </div>

                    </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;

            if (document.getElementById("txtHCode").value == "") {
                isValid = false;
                $(txtHCode).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter HSN Code");
                return false;
            }
            else {
                $(txtHCode).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtDec").value == "") {
                isValid = false;
                $(txtDec).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Description");
                return false;
            }
            else {
                $(txtDec).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtCGST").value == "") {
                isValid = false;
                $(txtCGST).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter CGST");
                return false;
            }
            else {
                $(txtCGST).css({
                    "border": "",
                    "background": ""
                });
            }
            
            if (document.getElementById("txtSGST").value == "") {
                isValid = false;
                $(txtSGST).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter SGST");
                return false;
            }
            else {
                $(txtSGST).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtIGST").value == "") {
                isValid = false;
                $(txtIGST).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter IGST");
                return false;
            }
            else {
                $(txtIGST).css({
                    "border": "",
                    "background": ""
                });
            }


            if (isValid == false)
                e.preventDefault();

        });

    });
</script>
