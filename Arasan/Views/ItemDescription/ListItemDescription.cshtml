@model Arasan.Models.ItemDescription

@{
    ViewData["Title"] = "Test Description";
}

<partial name="JqxGridPartial" />

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong>Test Description</strong> </li>
        </ol>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var source =
        {
            url: "/ItemDescription/MyListItemgrid",

            data: {
                strstatus: ""
            },
            datatype: "json",
            updaterow: function (rowid, rowdata) {
                // synchronize with the server - send update command
            },
            datafields: [
                { name: 'des', type: 'string' },
                { name: 'unit', type: 'string' },
                { name: 'value', type: 'string' },
                { name: 'editrow', type: 'string' },
                { name: 'delrow', type: 'string' },


            ],
            id: 'id',
        };
        var dataAdapter = new $.jqx.dataAdapter(source,
            { contentType: 'application/json; charset=utf-8' }, {
            loadComplete: function () {

            }
        }
        );

        $("#grid").jqxGrid(
            {

                width: '100%',
                source: dataAdapter,
                //height: 450,
                autorowheight: true,
                autoheight: true,
                source: source,
                sortable: true,
                filterable: true,
                groupable: false,
                pageable: true,
                showfilterbar: true,
                //showfilterrow: true,
                filterbarmode: 'simple',
                theme: 'darkblue',
                enablebrowserselection: true,
                columns: [

                    { text: 'Test Description', filtertype: 'checkedlist', datafield: 'des', width: 200 },
                    { text: 'Unit', filtertype: 'input', datafield: 'unit', width: 200 },
                    { text: 'Value Or Manual', datafield: 'value', width: 200 },
                    { text: 'Edit', datafield: 'editrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                    { text: 'Delete', datafield: 'delrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsrenderer: linkrenderer1, cellsalign: 'center', width: 70 },
                ]
        });
        $("#ddlStatus").change(function () {
            var value = "Y";
            if ($(this).val() != "") {
                value = $(this).val();
            }
            source.data = {
                strstatus: value
            };
            $("#grid").jqxGrid({ source: source });
        });
    });
    var linkrenderer1 = function (row, column, value) {
        return '<a href="' + value + '" onclick="return ConfirmDelete()"><img  src="../Images/Inactive.png"  style="text-align: center; margin-top: 5px;padding-left:25px;"/></a>';
    }
</script>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <form>
                        <div class="row">
                            <div class="col-md-2 ">
                                @Html.DropDownListFor(n => n.ddlStatus, new SelectListItem[]
                                { new SelectListItem() {Text = "Enabled", Value="Y"},
                                new SelectListItem() {Text = "Disabled", Value="N"}},
                                new { @id = "ddlStatus", Class = "dropdownlist margin_bottom_new form-control" })
                            </div>
                            <div class="col-md-9 ">
                                <div class=" textalignright">

                                    <a href="@Url.Action("ItemDescription", "ItemDescription")" class="btn  btn-round btn-primary" style="float: right; color:white;">Add Item Test Description</a><br>
                                </div>


                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-10 ">
                                <div id="grid">
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function ConfirmDelete() {
        return confirm("Are you sure you want to delete?");
    }
</script>

