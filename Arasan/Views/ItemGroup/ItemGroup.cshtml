@model Arasan.Models.ItemGroup

@{
    ViewData["Title"] = "Item Group";

}

     <div class="row wrapper border-bottom page-heading">
      <div class="col-lg-12">

        <ol class="breadcrumb">
          <li> <a href="#">Home</a> </li>
          <li> <a>Master</a> </li>
          <li class="active"> <strong> Item Group </strong> </li>
        </ol>
      </div>
    </div>
     <div class="wrapper-content ">
        <div class="row">
         <div class="col-lg-12">
          <div class="ibox float-e-margins">
            <div class="widgets-container">
            
              <hr>
                    @using (Html.BeginForm("ItemGroup", "ItemGroup", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
              <form>
                        
									<div class="row">
                            <div class="col-lg-3"></div>
                                        <div class="col-md-6">
                                            <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Item Group<label class="Mandatory"></label></label>
                                                <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.itemGroup, new { @id = "txtItemGroups", @class = "form-control", @TabIndex = 1 })<br />
                                    </div>
                                            </div>
                                        </div>
                                        </div>
                         
                              <div class="row">
                            <div class="col-lg-3"></div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Item Group Description<label class="Mandatory"></label></label>
                                                <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.ItemGroupDescription, new { @id = "txtItemGroupDescription", @class = "form-control", @TabIndex = 1 })<br />
                                    </div>
                                            </div>
                                        </div>
                                        </div>
                                        <div class="row">
                            <div class="col-lg-8"></div>
                                <button type="submit" name="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave" value="Save" tabindex="18">Save</button>

                                <a button class="btn btn-danger" type="submit" href="@Url.Action("ListItemGroup", "ItemGroup")">Cancel</a>
                        </div>
                        
                                        </form>
                                        }
</div>
</div>
</div>
</div>
</div>