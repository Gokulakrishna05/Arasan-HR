@model Arasan.Models.ItemName

@{
    ViewData["Title"] = "Item";
}
  <partial name="JqxGridPartial" />
<script type="text/javascript" src="~/jqwidgets/jqxgrid.columnsresize.js"></script>

@* @Html.Partial("~/Views/JqxGridPartial.cshtml")  *@
    
<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong>Item </strong> </li>
        </ol>
    </div>
</div>

 <script type="text/javascript">
        $(document).ready(function () {
            var source =
            {
                url: "/ItemName/MyListItemgrid",
                //url: "/ItemName/ItemName",
                data: {
                    strstatus: "Y"
                },
               datatype: "json",
                updaterow: function (rowid, rowdata) {
                  // synchronize with the server - send update command
              },
                datafields: [
                    { name: 'itemgroup', type: 'string' },
                    { name: 'itemsubgroup', type: 'string' },
                    { name: 'itemname', type: 'string' },
                    { name: 'bin', type: 'string' },
                    { name: 'itemcate', type: 'string' },
                    { name: 'uom', type: 'string' },
                    { name: 'hsncode', type: 'string' },
                    { name: 'editrow', type: 'string' },
                    { name: 'delrow', type: 'string' },
                    { name: 'rrow', type: 'string' },
                ],
                id: 'id',
            };
              var dataAdapter = new $.jqx.dataAdapter(source,
                { contentType: 'application/json; charset=utf-8' }, {
                    loadComplete: function () {

                    }
                }
            );
          
            $("#grid").jqxGrid(
                {
                    width: '100%',
                    source: dataAdapter,
                    height: 650,
                    source: source,
                    //autoheight: true,
                    sortable: true,
                    filterable: true,
                    groupable: false,
                    pageable: true,
                    showfilterbar: true,
                    //showfilterrow: true,
                    theme: 'ui-start',
                    autorowheight: true,
                    filterbarmode: 'simple',
                    enablebrowserselection: true,
                    columnsresize: true,
                    selectionmode: 'multiplerowsextended',
                    keyboardnavigation: false,

                    columns: [
                   // { text: 'Item Category', filtertype: 'checkedlist', datafield: 'itemcate', width: 150 },
                    { text: 'Item Group', filtertype: 'checkedlist', datafield: 'itemgroup', width: 150 },
                      { text: 'Item Sub Group', filtertype: 'checkedlist', datafield: 'itemsubgroup', width: 150 },
                      { text: 'Item Name', filtertype: 'input', datafield: 'itemname', width: 300 },
                      { text: 'UOM' , datafield: 'uom', width: 50, align: 'center' },
                       
                      { text: 'HSN Code', datafield: 'hsncode', width: 100, align: 'center' },
                      { text: 'Edit', datafield: 'editrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                    //{ text: 'Delete', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                      { text: 'Regenerate', datafield: 'rrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 90 },
                    ]
            });
            $("#ddlStatus").change(function () {
            var value = "Y";
            if ($(this).val() != "") {
                value = $(this).val();
            }
            source.data = {
                strstatus: value
            };
            $("#grid").jqxGrid({ source: source });
        });
        });
    function returnMyLink(cellValue, options, rowdata, action) {
        return "<a href='/Controller/Action/" + options.rowId + "' >Click here</a>";
    }
</script>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                  
                    <form>
                         <div class="row">
                            <div class="col-md-2 ">
                                @Html.DropDownListFor(n => n.ddlStatus, new SelectListItem[]
                { new SelectListItem() {Text = "Enabled", Value="Y"},
                new SelectListItem() {Text = "Disabled", Value="N"}},
                                new { @id = "ddlStatus", Class = "dropdownlist margin_bottom_new form-control" })
                            </div>
                             <div class="col-md-9 "> 
                                   <div class=" textalignright">
                                    <a href="@Url.Action("ItemName", "ItemName")" class="btn  btn-round btn-primary" style="float: right; color:white;">Add Item</a>
                                     <br>
                                </div>
                       
                       
                        </div>
                        </div>
                        <div class="row">

                           
                            <div class="col-md-12 "> 
                                <div id="grid">
    </div>

                            </div>
                           
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function ConfirmDelete() {
        return confirm("Are you sure you want to delete?");
    }
</script>