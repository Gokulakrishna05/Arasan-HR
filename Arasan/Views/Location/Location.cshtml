        var Capacity = "<td><input class='form-control' id='txtCapacity" + index + "' name='Locationlst[" + index + "].Capacity'  style='width: 150px;' type='text' /></td>";

        var removeCell = "<td><input id='Isvalid" + index + "' name='Locationlst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='Locationlst.Index' type='hidden' value='" + index + "'  /></td>";

        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + BinId + BinDesc + Capacity + removeCell + "</tr>";
        //alert(Packing);
        $("#tbBooks").append(newRow);

        $(".chosen-select").chosen();
        $(function () {
            $('._select').select2();
        });
    }
    $(".chosen-select").chosen();
    function removeRow1(id) {
        var table = document.getElementById("dataTable1");
