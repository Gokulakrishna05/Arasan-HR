<script>
    $(function () {
        $(document).on('click', '.closeFancybox', function () {
            $.fancybox.close();
        });

    })
    function changeQty(_this, i) {
        try {
            var GTot = 0;
            var j = 0;
            var qty = 0;
            var tot = 0;
            var totfrieght = 0;

            var totamt = 0;
            var totamount = 0;
            var qty = document.getElementById("reqqty" + i).value;
            var up = document.getElementById("InvQty" + i).value;
            var cl = document.getElementById("txtClosingStock" + i).value;
          
            if (qty == "")
                qty = 0;

            if (up == "")
                up = 0;
            if (cl == "")
                cl = 0;

            if (eval(up) > eval(cl)) {
                document.getElementById("InvQty" + i).value = "0";
                alert("Issue Qty is Greaterthen Closing Stock");
                up=0;
            }
            if (eval(qty) > eval(up)) {
                document.getElementById("InvQty" + i).value = "0";
                alert("Issue Qty is Greaterthen Request Qty");
                up = 0;
            }
            tot = eval(qty) - eval(up)

            document.getElementById("PendingQty" +i).value = tot.toFixed(2);
           

        }
        catch (ex) {
            alert(ex.message);
        }
    }
