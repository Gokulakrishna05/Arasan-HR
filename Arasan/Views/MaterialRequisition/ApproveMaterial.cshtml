                                                                        <td>@Html.TextBoxFor(o => o.MRlst[i].InvQty, new { @id = "InvQty" + i, @class = "form-control" , style = "width: 80px;",@onkeyup = "changeQty(this," + i + ")"})</td>

                                                                        <td>@Html.TextBoxFor(o => o.MRlst[i].IndQty, new { @id = "PendingQty" + i, @class = "form-control", style = "width: 80px;color:red;" ,@readonly=true})</td>

