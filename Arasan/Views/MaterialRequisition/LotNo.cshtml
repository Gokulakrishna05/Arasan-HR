@model Arasan.Models.MaterialRequisition

@{
    Layout = "_PopupLayout";
    ViewData["Title"] = "Issue To Indent";
      string rowid = ViewContext.HttpContext.Request.Query["rowid"];
}

<style>
    .newwidth {
        width: 120px;
    }
</style>


<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    @using (Html.BeginForm("WholeStock", "MaterialRequisition", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>

                            <div style="height:30px;"></div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">

                                        <div class="ibox-content collapse in">
                                            <div class="widgets-container">
                                                <div>
                                                    <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                                        <thead>
                                                            <tr>
                                                                 
                                                                <th>Item Name</th>
                                                                <th>Lot No</th>
                                                                 
                                                                <th>  Stock </th>
                                                                <th>  Qty </th>


                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            @{
                                                                int i = 0;

                                                                foreach (var item in Model.lotlst.ToList())
                                                                {

                                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                                        <td>@Html.DisplayFor(o => o.lotlst[i].item)@Html.HiddenFor(o => o.lotlst[i].itemid)@Html.HiddenFor(o => o.lotlst[i].invid ,new{@id="invid" + i})</td>
                                                                        <td>@Html.DisplayFor(o => o.lotlst[i].Lot)@Html.HiddenFor(o => o.lotlst[i].Lot,new{@id="lotno" + i})</td>
                                                                        <td>@Html.DisplayFor(o => o.lotlst[i].qty)</td>
                                                                        <td>@Html.TextBoxFor(o => o.lotlst[i].reqqty ,new{@id="reqqty" + i})</td>


                                                                    </tr>
                                                                    i++;
                                                                }
                                                            }

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div style="height:30px;"></div>
                            <div class="col-lg-10"></div>
 <input id="button" type="button" value="OK" class="btn btn-success" />
                            <input type="button" class="btn btn-danger" value="Close" onclick="location.href='@Url.Action("ApproveMaterial", "MaterialRequisition")'" />


                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
     var rowid = "@rowid";
    $(function () {
        $(document).on('click', '.closeFancybox', function () {
            $.fancybox.close();
        });

    })
      


     $("#button").click(function () {
        if (confirm('Are you sure want to Submit?') == true) {
        var ar1 = "";
        var ar2 = "";
        var ar3 = "";
        var tot = 0;
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                var reqqty = document.getElementById('reqqty' + j).value;

                if (eval(reqqty) > 0) {
                    var invid = document.getElementById('invid' + j).value;
                    var lotno = document.getElementById('lotno' + j).value;
                   
                    var qty = document.getElementById('reqqty' + j).value;

                    

                    ar1 += invid + ",";
                    ar2 += lotno + ",";
                    ar3 += qty   + ","
                    tot += eval(qty);
                }
            }
            j += 1;
        });
        var invenid = ar1.substring(0, ar1.length - 1);
        var inlotno = ar2.substring(0, ar2.length - 1);
        var invqty  = ar3.substring(0, ar3.length - 1);
       alert(invqty);
        window.parent.document.getElementById('InvQty' + rowid).value = tot;
        window.parent.document.getElementById('lotno' + rowid).value = inlotno;
        
        window.parent.document.getElementById('inveid' + rowid).value = invenid;
        window.parent.document.getElementById('inventryQty' + rowid).value = invqty;
        window.parent.changeQty(0, rowid);
        window.parent.jQuery.fancybox.close();
        }
    });
</script>

