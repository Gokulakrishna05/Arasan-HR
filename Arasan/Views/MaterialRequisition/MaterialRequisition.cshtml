     function Grup_Change(itemid, i) {
               //alert(itemid);
               //debugger;
                $.ajax({
                    url: "GetItemJSON",
                    type: "post",
                    data: {'itemid': itemid},
                    cache: false,
                    success: function (response) {
                        var newlist;
                        //alert(JSON.stringify(response));
                        newlist = response.Itemlst;
