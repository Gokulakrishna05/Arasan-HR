            data: { 'supid': itemid },
            cache: false,
            success: function (response) {
                var newlist;
                //alert(JSON.stringify(response));
                newlist = response.Ilst;
                PopulateDropDown("#ddlworkcenter", response);
            },
            error: function () {
                debugger;
                alert("Please Select Location");
            }
        });
    }

    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
