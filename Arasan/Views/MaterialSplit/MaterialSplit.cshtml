@model Arasan.Models.MaterialSplit
@{
    ViewData["Title"] = "Material Splitting Entry";
}
<style>
    .newwidth {
        width: 100px;
    }
</style>
<div class="page-content-wrapper animated fadeInRight">
    <div class="row wrapper border-bottom page-heading">
        <div class="col-lg-12">

            <ol class="breadcrumb">
                <li> <a href="#">Home</a> </li>
                <li> <a>Production</a> </li>
                <li class="active"> <strong> Material Splitting Entry </strong> </li>
            </ol>
        </div>
    </div>
    <div class="wrapper-content ">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="widgets-container">
                        <h5 style="font-size:14px">Material Splitting Entry</h5>
                        <hr>
                        <form>
                            <div class="row">
                            <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Doc No<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.Docid, new { @id = "txtDocId", @class = "form-control", @TabIndex = 1,@readonly="readonly"  })
                                         @Html.HiddenFor(C => C.ID)
                                            @Html.HiddenFor(C => C.Enterd)
                                            @Html.HiddenFor(C => C.Branch)<br />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="inputName3" class="col-sm-4 control-label">DOC Date<label class="Mandatory"></label></label>
                                        <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                            @Html.TextBoxFor(C => C.Docdate, new { @id = "Docdate", @class = "form-control", @TabIndex = 2,@size="31" ,@readonly="readonly"})
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                                </div>
                               
                                </div>
                                 <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label"> Location<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                          @Html.DropDownListFor(C => C.Location, Model.Loclst," -- Please Select -- ", new { @id = "ddlLocation", @Class = "form-control _select", @TabIndex = 1,@onchange="changeItem(this.value)"  })<br />


                                        </div>
                                    </div>
                                </div>
                              
                               


                            </div>
                            <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="btn-group">
                                                            <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow()" class="btn sbold green" /></p>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:200px;">

                                                        <table class="table table-striped table-hover" id="dataTable">
                                                        <thead>
                                                            <tr>
                                                               
                                                                <th>Item Id </th>
                                                                <th>Unit</th>
                                                                <th> Cl Stock</th>
                                                                <th>Qty</th>
                                                                <th>Weight/Piece</th>
                                                                <th>Rate</th>
                                                                <th>Amount</th>
                                                                <th>Item Coverd as</th>
                                                                <th>UnitID</th>
                                                                <th>Qty</th>
                                                                <th>Rate</th>
                                                                <th>Amount</th>
                                                               
                                                            </tr>
                                                        </thead>
                                                         <tbody id="tbBooks">

                                                                @{

                                                                    int j = 0;

                                                                    foreach (var item in Model.splitLst.ToList())
                                                                    {
                                                                                                    <tr id="trBook@(j)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">
                                                                                                     
                                                                                                    <td>
                                                                                                            @Html.DropDownListFor(o => o.splitLst[j].ItemId, Model.splitLst[j].Itemlst, "Please Select", new { @class = "form-control _select newcss", @id = "ddlItemId" + j, style = "width: 200px;",@onchange="changeDrum(this.value,"+j+")"})

                                                                                                        </td>
                                                                                                        <td>
                                                                                                         
                                                                                                            @Html.TextBoxFor(o => o.splitLst[j].unit, new { @id = "txtunit" + j, @class = "form-control", style = "width: 120px;" ,@readonly="readonly"})

                                                                                                            @*@Html.DropDownListFor(o => o.unpackLst[j].batchno, Model.unpackLst[j].batchlst, "Please Select", new { @class = "form-control _select   newcss", @id = "ddlbatchno" + j, style = "width: 200px;"  })*@
                                                                                                      
                                                                                                        </td>
                                                                                                          <td>
                                                                                                      
                                                                                                        @Html.TextBoxFor(o => o.splitLst[j].Stock, new { @id = "txtStock" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)",@readonly="readonly"})
                                                                                                        </td>
                                                                                                        <td>
                                                                                                      
                                                                                                        @Html.TextBoxFor(o => o.splitLst[j].Qty, new { @id = "txtQty" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)", @onkeyup = "changeQty(this," + j + ")" })
                                                                                                        </td>
                                                                                                        <td>
                                                                                                      
                                                                                                        @Html.TextBoxFor(o => o.splitLst[j].wight, new { @id = "txtwight" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)" })
                                                                                                        </td>
                                                                                                        <td>
                                                                                                        
                                                                                                        @Html.TextBoxFor(o => o.splitLst[j].rate, new { @id = "txtrate" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)",@readonly="readonly" })
 
                                                                                                        </td>
                                                                                                        <td>
                                                                                                        
                                                                                                        @Html.TextBoxFor(o => o.splitLst[j].amount, new { @id = "txtamount" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)",@readonly="readonly" })
 
                                                                                                        </td>
                                                                                                        <td>
                                                                                                            @Html.DropDownListFor(o => o.splitLst[j].ConItemId, Model.splitLst[j].ConItemlst, "Please Select", new { @class = "form-control _select newcss", @id = "ddlConItemId" + j, style = "width: 200px;",@onchange="changeDrum(this.value,"+j+")"})
                                                                                                        </td>
                                                                                                         
                                                                                                         <td>
                                                                                                         
                                                                                                            @Html.TextBoxFor(o => o.splitLst[j].Conunit, new { @id = "txtConunit" + j, @class = "form-control", style = "width: 120px;" ,@readonly="readonly"})

                                                                                                            @*@Html.DropDownListFor(o => o.unpackLst[j].batchno, Model.unpackLst[j].batchlst, "Please Select", new { @class = "form-control _select   newcss", @id = "ddlbatchno" + j, style = "width: 200px;"  })*@
                                                                                                      
                                                                                                        </td>
                                                                                                        
                                                                                                      <td>
                                                                                                      
                                                                                                        @Html.TextBoxFor(o => o.splitLst[j].ConQty, new { @id = "txtConQty" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)", @onkeyup = "changeQty(this," + j + ")" })
                                                                                                        </td>
                                                                                                         
                                                                                                         <td>
                                                                                                        
                                                                                                        @Html.TextBoxFor(o => o.splitLst[j].conrate, new { @id = "txtconrate" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)" })
 
                                                                                                        </td>
                                                                                                        <td>
                                                                                                        
                                                                                                        @Html.TextBoxFor(o => o.splitLst[j].conamount, new { @id = "txtconamount" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)",@readonly="readonly" })
 
                                                                                                        </td>
                                                                                                        <td>
                                                                                                            @Html.HiddenFor(o => o.splitLst[j].Isvalid, new { @id = "IsInvalid" + j })
                                                                                                            <img onclick="removeRow(@(j));" src="../Images/delete.png" style="cursor:pointer" /> <input name="EnqLst.Index" type="hidden" value="@(j)" />
                                                                                                        </td>
                                                                                                    </tr>
                                                                     
                                                                        j = j + 1;

                                                                    }
                                                                }
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                <div class="row">
                                
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Total Qty<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            <input class="form-control" id="inputEmail3" type="text"><br />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">To be Received<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            <input class="form-control" id="inputEmail3" type="text"><br />
                                        </div>
                                    </div>
                                </div>
                                </div>
                               
                            <div style="height:30px;"></div>
                            <button type="submit" class="btn aqua m-t-xs bottom15-xs">Submit</button>
                            <button class="btn btn-danger" type="submit">Cancel</button><br />

                        </form>
                    </div>

                </div>

            </div>

        </div>

    </div>

</div>
<script>
     $(function() {
            $('._select').select2();
        });
    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
     $('.form_datetime').datetimepicker({
        //language:  'fr',
        weekStart: 1,
        todayBtn:  1,
    autoclose: 1,
    todayHighlight: 1,
    startView: 2,
    forceParse: 0,
        showMeridian: 1
    });
     function changeItem(loc) {
       
        $.ajax({
            url: "GetItemJSON",
            type: "post",
            data: { 'loc': loc },
            cache: false,
            success: function (response) {
                var newlist;
                //alert(JSON.stringify(response));
                newlist = response.Ilst;
                   var i = 0;
                
                        $('tr.chkitemlst').each(function () {
                    if ($(this).css('display') !== 'none') {
                        PopulateDropDown("#ddlItemId" + i, response);
                        i += 1;
                    }
                });
                         
                
            },
            error: function () {
                debugger;
                alert("Please Select Location");
            }
        });
    }
</script>