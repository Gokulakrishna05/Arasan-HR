<script type="text/javascript">
    $(document).ready(function () {
        var source =
        {
            url: "/PackDrumAllocation/MyListItemgrid",
            //url: "/ItemName/ItemName",
            datatype: "json",
            updaterow: function (rowid, rowdata) {
                // synchronize with the server - send update command
            },
            datafields: [
                { name: 'docid', type: 'string' },
                { name: 'docdate', type: 'string' },
                { name: 'start', type: 'string' },
                { name: 'last', type: 'string' },
                { name: 'location', type: 'string' },
                { name: 'totdrum', type: 'string' },
                { name: 'prefix', type: 'string' },
                { name: 'viewrow', type: 'string' },
                { name: 'delrow', type: 'string' },
            ],
            id: 'id',
        };
        var dataAdapter = new $.jqx.dataAdapter(source,
            { contentType: 'application/json; charset=utf-8' }, {
            loadComplete: function () {

            }
        }
        );

        $("#grid").jqxGrid(
            {
                width: '100%',
                source: dataAdapter,
                height: 450,
                source: source,
                sortable: true,
                filterable: true,
                groupable: false,
                pageable: true,
                showfilterrow: true,


                enablebrowserselection: true,

                theme: 'energyblue',
                enablebrowserselection: true,

                columns: [
                    { text: 'Doc ID', filtertype: 'input', datafield: 'docid', width: 150 },
                    { text: 'Doc Date', filtertype: 'input', datafield: 'docdate', width: 150 },
                    { text: 'Prefix', filtertype: 'checkedlist', datafield: 'prefix', width: 150 },
                    { text: 'Location', filtertype: 'checkedlist', datafield: 'location', width: 300, align: 'center' },
                    { text: 'Start No', datafield: 'start', width: 100, align: 'center' },
                    { text: 'Total Drum', datafield: 'totdrum', width: 100, align: 'center' },
                    { text: 'Last No', datafield: 'last', width: 100, align: 'center' },
                    
                    { text: 'View', datafield: 'viewrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                    { text: 'Delete', datafield: 'delrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                ]
            });
    });
</script>
