                                        </div>

                                        <br />
                                    </div>
                                </div>
                               
                                </div>

                             
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">


                                          <label for="inputName3" class="col-sm-4 control-label">Start No<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.Start, new { @id = "txtStart", @class = "form-control", @TabIndex = 1 ,@readonly=true , onkeydown = "return isNumeric2(event.keyCode,this.value)" })
                                            <br />

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="inputName3" class="col-sm-4 control-label">Last No<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.End, new { @id = "txtEnd", @class = "form-control", @TabIndex = 1 ,@readonly="readonly" , onkeydown = "return isNumeric2(event.keyCode,this.value)" })
                                            <br />

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                
                                <div class="col-md-6">
                                    <div class="form-group">


                                             <label for="inputName3" class="col-sm-4 control-label">Prefix<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.Pri, new { @id = "txtPri", @class = "form-control", @TabIndex = 1 ,@readonly="readonly" , onkeydown = "return isNumeric2(event.keyCode,this.value)" })
                                            <br />

                                        </div>
                                    </div>
                                </div>
                            
                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="inputName3" class="col-sm-4 control-label">Total No.Of Drums <label class="Mandatory"></label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.Totdrum, new { @id = "txtTotdrum", @class = "form-control", @TabIndex = 1 , onkeydown = "return isNumeric2(event.keyCode,this.value)" , @onchange = "changeDrum(this.value)"  })
                                            <br />

                                        </div>
                                    </div>
                                </div>
                                </div>
                              
                            <div style="height:30px;"></div>
                         
                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                    <div class="scroll">
                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>
												
                                                <th> Pack Drum No </th>
                                                <th> Packed Y/N </th>
                                                
                                            </tr>

                                        </thead>
                                        <tbody id="tbBooks">

                                          @*  @{

                                                int i = 0;
                                                foreach (var item in Model.drumlst.ToList())
                                                {
                                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">
                                                        <td> @Html.TextBoxFor(o => o.drumlst[i].packdrum, new { @id = "txtpackdrum" + i, @class = "form-control", onkeydown = "return isNumeric2(event.keyCode,this.value)", style = "width: 100px;" })</td>

                                                                        
                                                                        
                                                        <td>
                                                            @Html.RadioButtonFor(o => o.drumlst[i].packyn, "Y", new { @id = "txtpackyn",@TabIndex = 2 })
                                                            <label id="mt-radio">Yes</label>
                                                            @Html.RadioButtonFor(o => o.drumlst[i].packyn, "N", new { @id = "txtpackyn",@TabIndex = 3 })
                                                            <label id="mt-radio">No</label>
                                                        </td>
                                                                 <td>
                                                            @Html.HiddenFor(o => o.drumlst[i].Isvalid, new { @id = "Isvalid" + i })
                                                                            <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="MRlst.Index" type="hidden" value="@(i)" />
                                                                        </td>


                                                                    </tr>

                                                    i = i + 1;
                                                }
                                            }*@

                                        </tbody>
                                    </table>
                                </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">


                                        <br />   <label for="inputName3" class="col-sm-4 control-label">Enterd by<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">

                                            @Html.DropDownListFor(C => C.Enter, Model.Emplst," -- Please Select -- ", new { @id = "ddlEnter", @Class = "form-control _select", @TabIndex = 4 } )
                                            <br />

                                        </div>
                                    </div>
                                </div>
                                
                            </div>

                            <div style="height:30px;"></div>
                            <div class="col-lg-10"></div>
                            <button type="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave">Submit</button>
                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListPackDrum", "PackDrumAllocation")'">Cancel</button>

                        </form>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
<script>

    $(function () {
        $('._select').select2();
    });

    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,

        forceParse: 0
    });
    
    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;
           
            if (document.getElementById("ddllocation").value == "" || document.getElementById("ddllocation").value == 0) {
                isValid = false;
                $(ddllocation).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Location ");
                return false; Center
            }
            else {
                $(ddllocation).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtVoucherNo").value == "") {
                isValid = false;
                $(txtVoucherNo).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Voucher No");
                return false;
            }
            else {
                $(txtVoucherNo).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtPType").value == "") {
                isValid = false;
                $(txtPType).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Choose Payment Type");
                return false;
            }
            else {
                $(txtPType).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtVdate").value == "") {
                isValid = false;
                $(txtVdate).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Voucher Date");
                return false;
            }
            else {
                $(txtVdate).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtRefDate").value == "") {
                isValid = false;
                $(txtRefDate).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Reference Date");
                return false;
            }
            else {
                $(txtRefDate).css({
                    "border": "",
                    "background": ""
                });
            }
           
    
        });

    });
    function changeItem(ItemId) {
        $.ajax({
            url: 'GetPrefixDetail',
            data: { "ItemId": ItemId },
            type: "GET",
            success: function (result) {

                document.getElementById("txtStart").value = result.stnumber;

                document.getElementById("txtPri" ).value = result.prefix;
                document.getElementById("txtEnd").value = result.last;
            },
            error: function () {
                alert("Data Not Found");
            }
        });
    }

    function changeDrum(ItemId) {
        var pre = document.getElementById("txtPri").value;
        var st = document.getElementById("txtStart").value;
        var id = document.getElementById("txtTotdrum").value;
        document.getElementById("tbBooks").innerHTML = "";
       
        $.ajax({
            url: 'GetDrumDetails',
            type: "post",
            data: { "id": id, "st": st, "pre": pre },
            cache: false,

            success: function (list) {
                //if (list != null && list.length > 0) {
                list.forEach((item) => {

                    var index = $("#tbBooks").children("tr").length;
                    //alert(item.batch);
                    var Drum = "<td><input class='form-control' id='txtpackdrum" + index + "' name='Drumlst[" + index + "].packdrum'  style='width: 250px;' type='text'  readonly='True'  value=" + item.packdrum + " /><input id='txtpackdrum" + index + "' name='drumlst[" + index + "].packdrum' type='hidden'  value=" + item.packdrum + "><input id='txttotaldrum" + index + "' name='drumlst[" + index + "].totaldrum' type='hidden'  value=" + item.totaldrum + "></td>";


                    var Pack = "<td><input class='form-control' id='txtpackyn" + index + "' name='drumlst[" + index + "].'packyn  style='width: 80px;' type='text' readonly='True' value=" + item.packyn + " /><input id='txtpackyn" + index + "' name='Drumlst[" + index + "].packyn' type='hidden'  value=" + item.packyn + "></td>";

                    //var removeCell = "<td><input id='Isvalid" + index + "' name='Drumlst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='Drumlst.Index' type='hidden' value='" + index + "'  /></td>";


                    var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Drum + Pack + "</tr>";

                    $("#tbBooks").append(newRow);
                });
                //}
            },
            error: function () {
                alert("Data Not Found");
            }
        });

    }
</script>