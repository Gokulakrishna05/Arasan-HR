@model IEnumerable<Arasan.Models.PaymentRequest>

@{
    ViewData["Title"] = "Payment Request";
}
<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Account</a> </li>
            <li class="active"> <strong> Payment Request</strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <hr>
                    <form>
                        <div class="row">
                            <div class="col-md-12 ">
                                <div class=" textalignright">
                                    <a href="@Url.Action("PaymentRequest" , "PaymentRequest")" class="btn  btn-round btn-primary" style="float: right; color:white;">Add Payment Request</a>
                                    <br>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">

                                    <div class="ibox-content collapse in">
                                        <div class="widgets-container">
                                            <div>
                                                <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Doc Id</th>
                                                            <th>Type</th>
                                                            <th>PO Or GRN</th>
                                                            <th>Supplier</th>
                                                            
                                                            <th>Approve</th>
                                                            
                                                            <th>Edit</th>
                                                            <th>Close</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody>
                                                        @{
                                                            int i = 1;

                                                            foreach (var item in Model)
                                                            {
                                                                <tr>
                                                                    <td>@Html.DisplayFor(modelItem => item.DocId)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.GRN)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.Supplier)</td>

                                                                    @if (item.status == "Approved")
                                                                    {
                                                                        <td><div class="fa-hover col-md-2 col-sm-4"> <img src='../Images/tick.png' alt='Moved to Quote' width='20' /></div></td>
                                                                        <td><div class="fa-hover col-md-2 col-sm-4"> <img src='../Images/tick.png' alt='Moved to Quote' width='20' /></div></td>
                                                                        <td></td>
                                                                        <td></td>
                                                                    }
                                                                    else
                                                                    {
                                                                        <td><div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("ApprovePaymentRequest", "PaymentRequest",new { id=item.ID })"><img src='../Images/checklist.png' alt='View Details' width='20' /></a></div></td>

                                                                        //<td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("PaymentRequest", "PaymentRequest",new { id=item.ID })"></a></div></td>
                                                                        //<td> <a href="@Url.Action("DeleteMR","PaymentRequest",new {tag="Del",id=item.ID})" onclick="return confirm('Are you sure you want to close this record?');"><img src='../Images/Inactive.png' alt='Deactivate' /></a></td>

                                                                        <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("PaymentRequest", "PaymentRequest",new { id=item.ID })"></a></div></td>
                                                                       
                                                                        <td> <a href="@Url.Action("DeleteMR","PaymentRequest",new {tag="Del",id=item.ID})" onclick="return confirm('Are you sure you want to close this record?');"><img src='../Images/Inactive.png' alt='Deactivate' /></a></td>

                                                                    }

                                                                </tr>
                                                                i++;
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#example7').DataTable({
            dom: 'Bfrtip',
            buttons: [{
                text: 'copy',
                extend: "copy",
                className: 'btn dark btn-outline'
            }, {
                text: 'csv',
                extend: "csv",
                className: 'btn aqua btn-outline'
            }, {
                text: 'excel',
                extend: "excel",
                className: 'btn aqua btn-outline'
            }, {
                text: 'pdf',
                extend: "pdf",
                className: 'btn yellow  btn-outline'
            }, {
                text: 'print',
                extend: "print",
                className: 'btn purple  btn-outline'
            }]
        });



    });
</script>
