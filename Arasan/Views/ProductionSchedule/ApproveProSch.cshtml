                                                                            <td>

                                                                                        @Html.DisplayFor(o => o.PrsLst[i].ItemId)
                                                                            </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.PrsLst[i].Desc)

                                                                                    </td>
                                                                            <td>
                                                                                       @Html.DisplayFor(o => o.PrsLst[i].Unit)

                                                                                    </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.PrsLst[i].Input)

                                                                                    </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.PrsLst[i].Qty)

                                                                                    </td>

                                                                            

                                                                        </tr>


                                                                        i = i + 1;

                                                                    }
                                                                }



                                                            </tbody>
                                                        </table>


                                                    </div>
                                                </div>
                                                <!-- 1st tab  -->
                                            </div>
                                            <div class="tab-pane" id="tab-2">
                                                <!-- 2nd tab  -->
                                                

