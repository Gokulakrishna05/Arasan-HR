                                                    <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">

                                                        <table class="table table-striped table-hover" id="dataTableOut">
                                                            <thead>
                                                                <tr>

                                                                    
                                                                    <th>Output Item</th>
                                                                    <th> Item Desc </th>
                                                                    <th> Unit </th>
                                                                    <th> Output % </th>
                                                                    <th>Alam %</th>
                                                                    <th> Output Type </th>
                                                                    <th> Sch Qty </th>
                                                                    <th> Produced Qty </th>
                                                                </tr>
                                                            </thead>


                                                            <tbody id="tbBooks1">

                                                                @{


                                                                    int j = 0;

                                                                    foreach (var item in Model.ProLst.ToList())
                                                                    {
                                                                        <tr id="trBookOut@(j)" class="chkOutitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">
                                                                             
                                                                            <td>

                                                                                        @Html.DisplayFor(o => o.ProLst[j].Item)

                                                                                    </td>
                                                                            <td>
                                                                                       @Html.DisplayFor(o => o.ProLst[j].Des)

                                                                                    </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProLst[j].Unit)

                                                                                    </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProLst[j].Output)

                                                                                    </td>
                                                                            <td>
                                                                                       @Html.DisplayFor(o => o.ProLst[j].Alam)

                                                                                    </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProLst[j].OutputType)

                                                                                    </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProLst[j].Sch)

                                                                            </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProLst[j].Produced)

                                                                                    </td>

                                                                            

                                                                        </tr>



                                                                        j = j + 1;
                                                                    }
                                                                }



                                                            </tbody>




                                                        </table>

                                                    </div>
                                                </div>

                                                <!-- 2nd tab  -->
                                            </div>
                                            <div class="tab-pane" id="tab-3">
