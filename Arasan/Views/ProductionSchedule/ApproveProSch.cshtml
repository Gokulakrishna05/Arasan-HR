                                <div class="col-md-6">
                                    <div class="form-group">
                                             <br /><label for="inputName3" class="col-sm-4 control-label">Output Item<label class="mandatory"></label></label>

                                        <div class="col-sm-8">
                                                    @Html.DisplayFor(C => C.Itemid)<br>
                                            <br />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                             <br /><label for="inputName3" class="col-sm-4 control-label">Unit<label class="Mandatory"></label></label>

                                        <div class="col-sm-8">
                                                    @Html.DisplayFor(C => C.Unit)<br>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                            <br /> <label for="inputName3" class="col-sm-4 control-label">Output Qty<label class="mandatory"></label></label>

                                        <div class="col-sm-8">
                                                    @Html.DisplayFor(C => C.Qty)<br>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                            <br /> <label for="inputName3" class="col-sm-4 control-label">Exp.Run Hrs<label class="Mandatory"></label></label>

                                        <div class="col-sm-8">
                                              @Html.DisplayFor(C => C.Exprunhrs)<br>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                            <br /> <label for="inputName3" class="col-sm-4 control-label">Ref.Sch.No<label class="Mandatory"></label></label>

                                        <div class="col-sm-8">
                                                    @Html.DisplayFor(C => C.Refno)<br>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <br /> <label for="inputName3" class="col-sm-4 control-label">Prod Qty<label class="mandatory"></label></label>

                                        <div class="col-sm-8">
                                                    @Html.DisplayFor(C => C.ProdQty)<br>
                                        </div>
                                    </div>
                                </div>

