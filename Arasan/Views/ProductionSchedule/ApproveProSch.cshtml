                                                    <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                                        <table class="table table-striped table-hover" id="dataTableParem">
                                                            <thead>
                                                                <tr>

                                                                    <th>Parameters</th>
                                                                    <th>Unit</th>
                                                                    <th> Initial Values </th>
                                                                    <th> Final Value </th>
                                                                    <th>Remarks</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="tbBooks2">

                                                                        @{


                                                                            int g = 0;

                                                                            foreach (var item in Model.Prlst.ToList())
                                                                            {
                                                                                <tr id="trBookParem@(g)" class="chkParemitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                                            <td>
                                                                               @Html.DisplayFor(o => o.Prlst[g].Parameters)
                                                                            </td>
                                                                            <td>
                                                                               @Html.DisplayFor(o => o.Prlst[g].Unit)
                                                                            </td>
                                                                            <td>
                                                                             @Html.DisplayFor(o => o.Prlst[g].Initial)
                                                                            </td>
                                                                            <td>
                                                                              @Html.DisplayFor(o => o.Prlst[g].Final)
                                                                            </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.Prlst[g].Remarks)
                                                                            </td>

                                                                           

                                                                        </tr>



                                                                        g = g + 1;
                                                                    }
                                                                }



                                                            </tbody>
                                                        </table>
                                                    </div>



                                                </div>
                                                <!-- 3rd tab  -->
                                            </div>
                                            <div class="tab-pane" id="tab-4">
                                                <!-- 4th tab  -->
                                               
                                                <div class="row">
                                                    <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                                        <table class="table table-striped table-hover" id="dataTableOutput">
                                                            <thead>
                                                                <tr>

                                                                    <th>Sch.Date </th>
                                                                    <th>Run Hrs </th>
                                                                    
                                                                    <th>Item ID </th>
                                                                    <th>Sch.Qty </th>
                                                                    <th>No.Of Change </th>

                                                                </tr>
                                                            </thead>
                                                            <tbody id="tbBooks3">

                                                                @{


                                                                    int a = 0;

                                                                    foreach (var item in Model.ProscLst.ToList())
                                                                    {
                                                                        <tr id="trBookOutput@(a)" class="chkOutputitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProscLst[a].SchDate)
                                                                            </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProscLst[a].Hrs)
                                                                            </td>
                                                                             
                                                                            <td>

                                                                                        @Html.DisplayFor(o => o.ProscLst[a].Itemd)
                                                                            </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProscLst[a].Qty)
                                                                            </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProscLst[a].Change)
                                                                            </td>

                                                                            

                                                                        </tr>



                                                                        a = a + 1;
                                                                    }
                                                                }



                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>

                                                <!-- 4th tab  -->
                                            </div>
                                            <div class="tab-pane " id="tab-5">
                                                <!-- 5th tab  -->
                                               

                                                <div class="row">
                                                    <div class="col-md-6" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                                        <table class="table table-striped table-hover" id="dataTablePack">
                                                            <thead>
                                                                <tr>

                                                                    <th>Pack Item</th>
                                                                    <th>Qty</th>



                                                                </tr>
                                                            </thead>
                                                            <tbody id="tbBooks4">

                                                                @{


                                                                    int k = 0;

                                                                    foreach (var item in Model.ProschedLst.ToList())
                                                                    {
                                                                        <tr id="trBookPack@(k)" class="chkPackitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">


                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProschedLst[k].Pack)
                                                                            </td>
                                                                            <td>
                                                                                        @Html.DisplayFor(o => o.ProschedLst[k].Qty)
                                                                            </td>

                                                                           

                                                                        </tr>



                                                                        k = k + 1;
                                                                    }
                                                                }



                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>


                                                <!-- 5th tab  -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Entered By<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.Entered)<br>
                                        </div>
                                    </div>
                                </div>


