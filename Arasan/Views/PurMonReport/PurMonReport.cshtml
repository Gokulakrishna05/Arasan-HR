<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var Branch = document.getElementById("ddlbranch").value;
            var Sdate = document.getElementById("Sdate").value;
            var Edate = document.getElementById("Edate").value;

            var source =
            {
                url: "/PurMonReport/MyListPurMonReportGrid",
                //url: "/ItemName/ItemName",
                data: {
                    strstatus: "",
                    Branch: Branch,
                    Sdate: Sdate,
                    Edate: Edate,
                    //Item: Item,

                },
                datatype: "json",
                updaterow: function (rowid, rowdata) {
                    // synchronize with the server - send update command
                },
                datafields: [
                    { name: 'part', type: 'string' },
                    { name: 'item', type: 'string' },
                    { name: 'unit', type: 'string' },
                    { name: 'item', type: 'string' },
                ],
                id: 'id',
            };
            var dataAdapter = new $.jqx.dataAdapter(source,
                { contentType: 'application/json; charset=utf-8' }, {
                loadComplete: function () {

                }
            }
            );

            $("#grid").jqxGrid(
                {
                    width: '100%',
                    source: dataAdapter,
                    autorowheight: true,
                    autoheight: true,
                    source: source,
                    sortable: true,
                    filterable: true,
                    groupable: false,
                    pageable: true,
                    showfilterbar: true,
                    filterbarmode: 'simple',
                    //showfilterrow: true,
                    theme: 'darkblue',
                    enablebrowserselection: true,
                    columns: [
                        { text: 'Party Name', filtertype: 'input', datafield: 'part', width: 150 },
                        { text: 'Item ', filtertype: 'input', datafield: 'item', width: 130 },
                        { text: 'Unit', filtertype: 'input', datafield: 'unit', width: 130 },
                        { text: 'January', filtertype: 'input', datafield: 'jan', width: 250 },

                    ]
                });

            $("#pdfExport").click(function () {
                $("#grid").jqxGrid('exportdata', 'pdf', 'jqxGrid');
            });


            $("#ddlStatus").change(function () {
                var value = "Y";
                if ($(this).val() != "") {
                    value = $(this).val();
                }
                source.data = {
                    strstatus: value
                };
                $("#grid").jqxGrid({ source: source });
            });
        });
    });
</script>
