        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + ItemGrp + Item + Desc + Unit + Conversionfactor + Quantity + Rate + Amount + removeCell + "</tr>";
        //alert(Packing);
