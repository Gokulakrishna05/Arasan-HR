@model Arasan.Models.PurchaseQuo

@{
    Layout = "_PopupLayout";
    ViewData["Title"] = "Purchase Enquiry";
}
<style>
    .newwidth {
        width: 120px;
    }
</style>


<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                   @using (Html.BeginForm("ViewEnq", "PurchaseEnq", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                    <form>
 <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                            
                                                <label for="inputName3" class="col-sm-4 control-label">Branch<label class="Mandatory"></label></label>
                                                <div class="col-sm-8">
                                                    @Html.HiddenFor(C => C.ID)
                                           @Html.DisplayFor(C => C.Branch)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputName3" class="col-sm-4 control-label">Supplier Name<label class="Mandatory"></label></label>
                                              
                                                      <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.Supplier)
												</div>
                                               
                                            </div>
                                        </div>
                                    </div>
									
									 <div style="height:30px;"></div>
                                      <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                            
                                                <label for="inputName3" class="col-sm-4 control-label">Enquiry No.<label class="Mandatory"></label></label>
                                                <div class="col-sm-8">
                                           @Html.DisplayFor(C => C.EnqNo)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputName3" class="col-sm-4 control-label">Enquiry Date<label class="Mandatory"></label></label>
                                              
                                                      <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.EnqDate)
												</div>
                                               
                                            </div>
                                        </div>
                                    </div>
									
									 <div style="height:30px;"></div>

<div class="row">
          <div class="col-lg-12">
            <div class="ibox float-e-margins">
              
              <div class="ibox-content collapse in">
                <div class="widgets-container">
                  <div >
                    <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                      <thead>
                        <tr>
                          <th>Item Name</th>
                          <th>Quantity</th>
                          <th>Unit</th>
                         <th>Rate</th>
                         <th>Total Amount</th>
                        </tr>
                      </thead>
                   
                      <tbody>
                          @{
                                                            int i = 0;

                                                            foreach (var item in Model.QoLst.ToList())
                                                            {
                                                                
                        <tr>
                                                                    <td>@Html.DisplayFor(o => o.QoLst[i].ItemId)</td>
                                                                    <td>@Html.DisplayFor(o => o.QoLst[i].Quantity)</td>
                                                                    <td>@Html.DisplayFor(o => o.QoLst[i].Unit)</td>
                                                                    <td>@Html.DisplayFor(o => o.QoLst[i].rate)</td>
                                                                     <td>@Html.DisplayFor(o => o.QoLst[i].TotalAmount)</td>
                         </tr>
                                                                i++;
                                                            }
                                                        }
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    <div style="height:30px;"></div>
                           <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                            
                                                <label for="inputName3" class="col-sm-4 control-label">Total Amount<label class="Mandatory"></label></label>
                                                <div class="col-sm-8">
                                           @Html.DisplayFor(C => C.Net)
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </div>
                            <div style="height:30px;"></div>
                            <input type="button" class="btn btn-danger" value="Close" onClick="window.parent.jQuery.fancybox.close();" />

                         
                                   
                                 
                    </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function(){
    $(document).on('click','.closeFancybox',function(){
            $.fancybox.close();
    })
})
   
</script>
                         

                 