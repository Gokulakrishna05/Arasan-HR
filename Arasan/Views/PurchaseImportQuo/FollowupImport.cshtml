@model Arasan.Models.QuoImportFollowup

@{
    ViewData["Title"] = "Followup";

}

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Purchase</a> </li>
            <li> <a href="/PurchaseImportQuo/ListPurchaseImportQuo">PurchaseImport Quotations</a> </li>
            <li class="active"> <strong>Followup </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">Followup</h5>
                    <hr>

                    @using (Html.BeginForm("Followup", "PurchaseImportQuo", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken() 
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Quotation ID <label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.HiddenFor(C => C.Quoteid)
                                            @Html.TextBoxFor(C => C.QuoNo, new { @id = "QuoNo", @class = "form-control", @TabIndex = 2,@readonly="readonly" })  <br />

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Supplier <label class="Mandatory"></label></label>
                                        <div class="col-sm-8 bootstrap-timepicker">
                                            @Html.DisplayFor(C=>C.Supname)  <br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Followed By<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(C => C.Followby,Model.EnqassignList, new { @id = "Followby", @Class = "form-control chosen-select", @TabIndex = 2 })
                                            <br />
                                            @Html.HiddenFor(C => C.FolID)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Quotation Status<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Enquiryst, new { @id = "Enquiryst", @class = "form-control", @TabIndex = 2 })  <br />

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Follow Date<label class="Mandatory"></label></label>
                                        <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                            @Html.TextBoxFor(C => C.Followdate, new { @id = "Followdate", @class = "form-control", @TabIndex = 2,@size="32",@readonly=true })
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>

                                        <br />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Next Follow Date<label class="Mandatory"></label></label>
                                        <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                            @Html.TextBoxFor(C => C.Nfdate, new { @id = "Nfdate", @class = "form-control", @TabIndex = 2,@size="32",@readonly=true })
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                        <br />
                                    </div>
                                </div>
                            </div>



                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-2 control-label">Remarks<label class="Mandatory"></label></label>
                                        <div class="col-sm-12">
                                            @Html.TextAreaFor(C => C.Rmarks, new { @id = "Rmarks", @class = "form-control", @TabIndex = 2 })    <br />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn aqua m-t-xs bottom15-xs">Submit</button>
                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListPurchaseImportQuo", "PurchaseImportQuo")'">Cancel</button>


                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">

                                        <div class="ibox-content collapse in">
                                            <div class="widgets-container">
                                                <div>
                                                    <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                                        <thead>
                                                            <tr> 

                                                                <th>Followed By</th>
                                                                <th>Follow Date</th>
                                                                <th>Next Follow Date</th>
                                                                <th>Quotation Status</th>
                                                                <th>Remarks</th>
                                                                @*<th>Edit</th>
                                                            <th>Delete</th>*@
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            @{


                                                                foreach (var item in Model.qflst)
                                                                {
                                                                    <tr>

                                                                        <td>
                                                                            @Html.HiddenFor(C => C.FolID)
                                                                            @Html.DisplayFor(modelItem => item.Followby)
                                                                        </td>
                                                                        <td>@Html.DisplayFor(modelItem => item.Followdate)</td>
                                                                        <td>@Html.DisplayFor(modelItem => item.Nfdate)</td>
                                                                        <td>@Html.DisplayFor(modelItem => item.Enquiryst)</td>
                                                                        <td>@Html.DisplayFor(modelItem => item.Rmarks)</td>
                                                                        @*  <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("Followup", "PurchaseQuo",new { id=item.ID })"></a></div></td>
                                                            <td> <div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-trash" aria-hidden="true" href="@Url.Action("Followup", "PurchaseQuo",new { id=item.ID })"></a></div></td>
                                                            *@
                                                                    </tr>

                                                                }
                                                            }


                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                    </div>




                                </div>

                            </div>


                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(".chosen-select").chosen();
    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
</script>