@model Arasan.Models.QuoFollowup

@{
    ViewData["Title"] = "Followup";

}

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Purchase</a> </li>
            <li> <a href="/PurchaseQuo/ListPurchaseQuo">Purchase Quotations</a> </li>
            <li class="active"> <strong>Followup </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">Followup</h5>
                    <hr>
                    
                    @using (Html.BeginForm("Followup", "PurchaseQuo", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="inputName3" class="col-sm-4 control-label">Quotation ID <label class="Mandatory"></label></label>
                                    <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.QuoNo, new { @id = "QuoNo", @class = "form-control", @TabIndex = 2,@readonly="readonly" })

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="inputName3" class="col-sm-4 control-label">Supplier Name<label class="Mandatory"></label></label>
