                                    <br>
                                </div>


                            </div>
                        </div>*@

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">

                                    <div class="ibox-content collapse in">
                                        <div class="widgets-container">
                                            <div>
                                                <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>S.No</th>
                                                            <th>Branch</th>                                                           
                                                            <th>Supplier</th>
                                                            <th>Enquiry No</th>
                                                            <th>Quo No</th>
                                                            <th>Doc Date</th>
                                                            @* <th>Currency</th>*@
                                                            <th>Send Mail</th>
                                                            <th>Followup</th>
                                                            <th>Generate PO</th>
                                                            <th>Edit</th>
                                                            <th>Delete</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody>
                                                        @{
                                                            int i = 1;

                                                            foreach (var item in Model)
                                                            {
                                                                <tr>
                                                                    <td>@i</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.Supplier)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.EnqNo)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.QuoId)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.DocDate)</td>
                                                                    @if (item.Active == "No")
                                                                    {
                                                                        <td></td>
                                                                        <td> </td>
                                                                        <td></td>
                                                                        <td> </td>
                                                                        <td> </td>
                                                                    }
                                                                   
                                                          else
                                                          {
                                                                    <td><div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("SendMail", "PurchaseQuo",new { id=item.ID })"><img src='../Images/mail_icon.png' alt='Send Email' /></a></div></td>
                                                                    <td> <div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("Followup", "PurchaseQuo",new { id=item.ID })"><img src='../Images/followup.png' alt='FollowUp' /> - (1)</a></div></td>
                                                            @if(item.status == "Generated")
                                                            {
                                                                <td><div class="fa-hover col-md-2 col-sm-4"> <img src='../Images/tick.png' alt='Moved to Quote' width='20' /></div></td>
                                                                <td></td>
                                                                <td></td>
                                                                 }
                                                                    else{
                                                                         <td><div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("ViewQuote", "PurchaseQuo",new { id=item.ID })" class='fancybox' data-fancybox-type='iframe'><img src='../Images/move_quote.png' alt='View Details' width='20'/></a></div></td>
                                                                        <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("PurchaseQuotation", "PurchaseQuo",new { id=item.ID })"></a></div></td>
                                                                        <td> <a href="@Url.Action("DeleteMR","PurchaseQuo",new {tag="Del",id=item.ID})" onclick="return confirm('Are you sure you want to close this record?');"><img src='../Images/Inactive.png' alt='Deactivate' /></a></td>
                                                                 }
                                                                 }
                                                            
                                                        </tr>
                                                                i++; 
                                                            }
                                                        }
                                                     
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

