    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Transaction</a> </li>
            <li class="active"> <strong>Purchase Quotations</strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <form>
                        <div class="row">
                        <div class="col-md-6">
                            <select style='width: 200px;' class='form-control  newcss' id="dllstatus" onchange="changeStatus(this.value)">
                                <option value='Yes'>Open</option>
                                <option value='No'>Close</option>
                          @*  <option value='InActive'>Disabled</option>*@
                            </select>
                        </div>
                        </div>
                        @*<div class="row">
                            <div class="col-md-12 ">
                                <div class=" textalignright">
