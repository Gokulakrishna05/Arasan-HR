<script>
    $(function () {
        $('._select').select2();
        var shift = '@ViewBag.shift';
        changeshift(shift);
    });
    function changeshift(Shiftid) {
        $.ajax({
            url: 'GetshiftDetail',
            data: { "Shiftid": Shiftid },
            type: "GET",
            success: function (result) {
                document.getElementById("shiftdetails").innerHTML = result.fromtime + " to " + result.totime + "  Total Hours : " + result.tothrs;
            },
            error: function () {
                alert("Data Not Found");
            }
        });
    }


   
     function getshed(ItemId, i) {
        $.ajax({
            url: 'Curingset',
            data: { "ItemId": ItemId },
            type: "GET",
            success: function (result) {

                document.getElementById("txtShedOccu" + i).value = result.shed;
                

            },
            error: function () {
                alert("Data Not Found");
            }
        });

    }

     $(document).ready(function () {
        $('#btnSave').click(function (e) {

            var e = 0;
            var shed;
            var isValid = true;
            $('tr.chkitemlstout').each(function () {
                if ($(this).css('display') !== 'none') {

                     shed = document.getElementById("txtShedOccu" + e).value;
                    
                    e += 1;
                  
                }
                alert(e);
                alert(shed);
                
                if (shed < e) {
                    isValid = false;
                    alert("Shed Capacity is Low");
                    return false;
                }
            });

            if (isValid == false)
                e.preventDefault();
           

           
            
        });
        });
</script>