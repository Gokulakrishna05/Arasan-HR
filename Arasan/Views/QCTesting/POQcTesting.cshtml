@model Arasan.Models.QCTesting
@{
    ViewData["Title"] = "POTesting";
}
<style>

    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Quality Control</a> </li>
            <li class="active"> <strong>  PO Testing </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px"> QC Testing</h5>
                    <hr>
                    @using (Html.BeginForm("POQcTesting","QCTesting", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

