                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.QCPOLst[i].startvalue, new { @id = "txtStartvalue" + i, @class = "form-control", style = "width: 90px;",@readonly="readonly"})
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.QCPOLst[i].endvalue, new { @id = "txtEndvalue" + i, @class = "form-control", style = "width: 90px;",@readonly="readonly"})
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.QCPOLst[i].test, new { @id = "txtTeste" + i, @class = "form-control", style = "width: 90px;"})
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.QCPOLst[i].manual, new { @id = "txtManual" + i, @class = "form-control", style = "width: 90px;"})
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.QCPOLst[i].actual, new { @id = "txtActual" + i, @class = "form-control", style = "width: 90px;"})
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.QCPOLst[i].testresult, new { @id = "txtTestResult" + i, @class = "form-control", style = "width: 90px;"})
                                                        </td>


                                                        <td>
