    function AddRow() {
        var opt = "";
        $.ajax({
            type: "POST",
            url: 'GetItemJSON',
            success: function (data) {

                $.each(data, function () {
                    opt += "<option value=" + this.value + ">" + this.text + "</option>";
                });
                AppendRow(opt);
            }
        })
    }
    $(function () {
        $('._select').select2();
    });
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
    }
    function PopulateDropDown(dropDownId, list) {
        //alert(list);
        $(dropDownId).empty().append('<option selected="selected" value="0">Please select</option>');
        if (list != null && list.length > 0) {
            $(dropDownId).removeAttr("disabled");
            $.each(list, function () {
                $(dropDownId).append($("<option></option>").val(this['value']).html(this['text']));
            });
        }
        $(dropDownId).trigger("liszt:updated");
    }
    function AppendRow(opt) {
        var index = $("#tbBooks").children("tr").length;
        var TestDec = "<td><input class='form-control' id='txtTestDec" + index + "' name='QCLst[" + index + "].TestDec'  style='width: 130px;'  type='text'  /></td>";

        var AccVale = "<td><input class='form-control' id='txtAccVale" + index + "' name='QCLst[" + index + "].AccVale'  style='width: 130px;'  type='text'    /></td>";

        var TestValue = "<td><input class='form-control' id='txtTestValue" + index + "' name='QCLst[" + index + "].TestValue'  style='width: 130px;'  type='text'    /></td>";

        var ManualValue = "<td><input class='form-control' id='txtManualValue" + index + "' name='QCLst[" + index + "].ManualValue'  style='width: 130px;'  type='text'    /></td>";

        var AcTestValue = "<td><input class='form-control' id='txtAcTestValue" + index + "' name='QCLst[" + index + "].AcTestValue'  style='width: 130px;'  type='text'    /></td>";

        var Result = "<td><input class='form-control' id='txtResult" + index + "' name='QCLst[" + index + "].Result'  style='width: 130px;'  type='text'    /></td>";

        var removeCell = "<td><input id='Isvalid" + index + "' name='TestDec[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='QCLst.Index' type='hidden' value='" + index + "'  /></td>";


        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + TestDec + AccVale + TestValue + ManualValue + AcTestValue + Result + removeCell + "</tr>";
        //alert(Packing);
        $("#tbBooks").append(newRow);

        $(".chosen-select").chosen();
    }
    $(function () {
        var Item = '@ViewBag.ItemId';
        changeItem(Item);
    });
    function changeItem(ItemId) {
        document.getElementById("tbBooks").innerHTML = "";
        $.ajax({
            url: 'GetItemDetails',
            type: "post",
            data: { "id": ItemId },
            cache: false,

            success: function (list) {
                //if (list != null && list.length > 0) {
                list.forEach((item) => {

                    var index = $("#tbBooks").children("tr").length;
                    //alert(item.batch);

                    var Description = "<td><input class='form-control' id='txtDescription" + index + "' name='QCPOLst[" + index + "].description'  style='width: 90px;' type='text' readonly='readonly' value=" + item.description + "   /><input class='form-control' id='txttestid" + index + "' name='QCPOLst[" + index + "].testid'  style='width: 90px;' type='hidden' readonly='readonly' value=" + item.testid + "   /></td>"

                    var Value = "<td><input class='form-control' id='txtValue" + index + "' name='QCPOLst[" + index + "].value'  style='width: 90px;' type='text' readonly='readonly' value=" + item.value + "  /></td>"

                    var Unit = "<td><input class='form-control' id='txtUnit" + index + "' name='QCPOLst[" + index + "].unit'  style='width: 90px;' type='text' readonly='readonly'  value=" + item.unit + " /></td>"

                    var Startvalue = "<td><input class='form-control' id='txtStartvalue" + index + "' name='QCPOLst[" + index + "].startvalue'  style='width: 90px;' type='text'  value=" + item.startvalue + " /></td>"

                    var Endvalue = "<td><input class='form-control' id='txtEndvalue" + index + "' name='QCPOLst[" + index + "].endvalue'  style='width: 90px;' type='text'  value=" + item.endvalue + " /></td>"

                    var Test = "<td><input class='form-control' id='txtTest" + index + "' name='QCPOLst[" + index + "].test'  style='width: 90px;' type='text'   /></td>"

                    var Manual = "<td><input class='form-control' id='txtManual" + index + "' name='QCPOLst[" + index + "].manual'  style='width: 90px;' type='text'   /></td>"

                    var Actual = "<td><input class='form-control' id='txtActual" + index + "' name='QCPOLst[" + index + "].actual'  style='width: 90px;' type='text'   /></td>"

                    var TestResult = "<td><input class='form-control' id='txtTestResult" + index + "' name='QCPOLst[" + index + "].testresult'  style='width: 90px;' type='text'   /></td>"


                    var removeCell = "<td><input id='Isvalid" + index + "' name='QCPOLst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='QCPOLst.Index' type='hidden' value='" + index + "'  /></td>";

                    var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Description + Value + Unit + Startvalue + Endvalue + Test + Manual + Actual + TestResult + removeCell + "</tr>";

                    $("#tbBooks").append(newRow);
                });
                //}
            },
            error: function () {
                alert("Data Not Found");
            }
        });
    }
