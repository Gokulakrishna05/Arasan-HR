<script type="text/javascript">
    $(document).ready(function () {
        var source =
        {
            url: "/QcTemplate/MyListItemgrid",

            data: {
                strstatus: ""
            },
            datatype: "json",
            updaterow: function (rowid, rowdata) {
                // synchronize with the server - send update command
            },
            datafields: [
                { name: 'qc', type: 'string' },
                { name: 'test', type: 'string' },
                { name: 'description', type: 'string' },
                { name: 'view', type: 'string' },
                { name: 'editrow', type: 'string' },
                { name: 'delrow', type: 'string' },


            ],
            id: 'id',
        };
        var dataAdapter = new $.jqx.dataAdapter(source,
            { contentType: 'application/json; charset=utf-8' }, {
            loadComplete: function () {

            }
        }
        );
       
        $("#grid").jqxGrid(
            {

                width: '100%',
                source: dataAdapter,
                //height: 450,
                autorowheight: true,
                autoheight: true,
                source: source,
                sortable: true,
                filterable: true,
                groupable: false,
                pageable: true,
                showfilterbar: true,
                //showfilterrow: true,
                filterbarmode: 'simple',
                theme: 'darkblue',
                enablebrowserselection: true,
                columns: [

                    { text: 'Qc Template', filtertype: 'checkedlist', datafield: 'qc', width: 200 },
                    { text: 'Test Type', filtertype: 'input', datafield: 'test', width: 200 },
                    { text: 'Template Description', datafield: 'description', width: 200 },
                    { text: 'View', datafield: 'view', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                    { text: 'Edit', datafield: 'editrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                    { text: 'Delete', datafield: 'delrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsrenderer: linkrenderer1, cellsalign: 'center', width: 70 },
                ]
            });
        $("#ddlStatus").change(function () {
            var value = "Y";
            if ($(this).val() != "") {
                value = $(this).val();
            }
            source.data = {
                strstatus: value
            };
            $("#grid").jqxGrid({ source: source });
        });
    });

    function returnMyLink(cellValue, options, rowdata, action) {
        return "<a href='/Controller/Action/" + options.rowId + "' >Click here</a>";
    }
    var linkrenderer1 = function (row, column, value) {
        return '<a href="' + value + '" onclick="return ConfirmDelete()"><img  src="../Images/Inactive.png"  style="text-align: center; margin-top: 5px;padding-left:25px;"/></a>';
    }
</script>


