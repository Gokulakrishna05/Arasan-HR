@model Arasan.Models.ReasonCode

@{
    ViewData["Title"] = "Reason Code ";
}
<div class="page-content-wrapper animated fadeInRight">
    <div class="row wrapper border-bottom page-heading">
        <div class="col-lg-12">

            <ol class="breadcrumb">
                <li> <a href="#">Home</a> </li>
                <li> <a>Production</a> </li>
                <li class="active"> <strong> Reason Code </strong> </li>
            </ol>
        </div>
    </div>
    <div class="wrapper-content ">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="widgets-container">
                        <h5 style="font-size:14px">Reason Code </h5>
                        <hr>
                        @using (Html.BeginForm("ReasonCode", "ReasonCode", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                        <form>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Process ID<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            <select class=" _select js-states form-control">

                                                <option> </option>
                                                <option value="CH">MAINTENANCE </option>
                                                <option value="KA">DG-MIXING </option>
                                                <option value="TAAI">PYRO-BLENDING</option>
                                                <option value="TAAI">PASTE-BLENDING</option>
                                                <option value="TAAI">POLISHING</option>
                                                <option value="TAAI">ATOMISATION</option>

                                            </select><br />
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-8">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">ModBy<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                                @Html.DropDownListFor(C => C.Intred, Model.assignList, new { @id = "ddlIntred", @Class = "form-control chosen-select", @TabIndex = 1 })<br />

                                        </div>
                                    </div>
                                </div>                                                                                  
                            </div>
                                <div style="height:30px;"></div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="btn-group">
                                            <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow()" class="btn sbold green" /></p>
                                        </div>
                                    </div>
                                </div>


                               <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">

                                    @* <div class="ibox float-e-margins">*@

                                    <!-- / ibox-title -->
                                    @* <div id="demo3" class="ibox-content collapse in">
                                <div class="borderedTable">
                                <div class="table-scrollable">*@
                                                    <table class="table table-striped table-hover">
                                                        <thead>
                                                            <tr>
                                                               
                                                                <th>Reason </th>
                                                                <th>Type</th>
                                                                <th> Description</th>
                                                                <th> Group Id </th>

                                                            </tr>
                                                        </thead>
                                            <tbody id="tbBooks">
                                                 @{

                                                int i = 0;
                                                int j = 1;


                                                    foreach (var item in Model.ReLst.ToList())
                                                {
                                                        <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                            <td>
                                                                @Html.TextBoxFor(o => o.ReLst[i].Reason, new { @id = "txtReason" + i, @class = "form-control", style = "width: 130px;" })
                                                            </td>
                                                            <td>
                                                                @Html.DropDownListFor(o => o.ReLst[i].Category, Model.ReLst[i].Categorylst, "Please Select", new { @class = "form-control chosen-select newcss", @id = "ddlItemGrp" + i, style = "width: 200px;", onchange = "Grup_Change(this.value," + i + ")"})

                                                            </td>
                                                            <td>
                                                                @Html.TextBoxFor(o => o.ReLst[i].Description, new { @id = "txtDescription" + i, @class = "form-control", style = "width: 130px;" })
                                                            </td>
                                                            <td>
                                                                @Html.TextBoxFor(o => o.ReLst[i].Group, new { @id = "txtGroup" + i, @class = "form-control", style = "width: 130px;" })
                                                            </td>
                                                            <td>
                                                                @Html.HiddenFor(o => o.ReLst[i].Isvalid, new { @id = "Isvalid" + i })
                                                                <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="EnqLst.Index" type="hidden" value="@(i)" />
                                                            </td>

                                                        </tr>
                                                        i = i + 1;
                                                        j = j + 1;

                                                    }
                                                }
                                            </tbody>
                                                    </table>
                                 </div>
                               </div>
                                      
                               
                                    
                              

                            <div style="height:30px;"></div>
                      <button type="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave">Submit</button>
                                <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListReasonCode", "ReasonCode")'">Cancel</button>
 
                        
                        </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(".chosen-select").chosen();
    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
    $(".chosen-select").chosen();
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
    }
    function changeType(id) {
        $.ajax({
            url: "GetTypeJSON",
            type: "post",
            data: { 'GPID': id },
            cache: false,
            success: function (response) {
                var newlist;
                newlist = response.Typlst;
                PopulateDropDown("#ddlGRNNo", response);
            },
            error: function () {
                debugger;
                alert("Please Select Type");
            }
        });
    }
     function AddRow() {
        var opt = "";
        $.ajax({
            type: "POST",
            url: 'GetItemJSON',
            success: function (data) {

                $.each(data, function () {
                    opt += "<option value=" + this.value + ">" + this.text + "</option>";
                });
                AppendRow(opt);
            }
        })
    }
      $(".chosen-select").chosen();
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
  }
  function PopulateDropDown(dropDownId, list) {
        //alert(list);
        $(dropDownId).empty().append();
        if (list != null && list.length > 0) {
            $(dropDownId).removeAttr("disabled");
            $.each(list, function () {
                $(dropDownId).append($("<option></option>").val(this['value']).html(this['text']));
            });
        }
        $(dropDownId).trigger("liszt:updated");
  }

    function AppendRow(opt) {
        var index = $("#tbBooks").children("tr").length;
        var Reason = "<td><input class='form-control' id='txtReason" + index + "' name='ReLst[" + index + "].Reason'  style='width: 130px;'  type='text'  /></td>";

        var Category = "<td><select style = 'width: 200px;' class='form-control chosen-select newcss' id='ddlCategory" + index + "' name='ReLst[" + index + "].Category' onchange = 'Grup_Change(this.value," + index + ")'><option value=''>Please select</option>" + opt + "</select></td>";

        var Description = "<td><input class='form-control' id='txtDescription" + index + "' name='ReLst[" + index + "].Description'  style='width: 130px;'  type='text'  /></td>";

        var Group = "<td><input class='form-control' id='txtGroup" + index + "' name='ReLst[" + index + "].Group'  style='width: 130px;'  type='text'  /></td>";

        
        var removeCell = "<td><input id='Isvalid" + index + "' name='ReLst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='ReLst.Index' type='hidden' value='" + index + "'  /></td>";


        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Reason + Category + Description + Group + removeCell + "</tr>";
        //alert(Packing);
        $("#tbBooks").append(newRow);

        $(".chosen-select").chosen();
    }


</script>

