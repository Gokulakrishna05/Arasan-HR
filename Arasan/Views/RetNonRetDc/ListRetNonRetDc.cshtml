<script type="text/javascript">
        $(document).ready(function () {
            var source =
            {
                url: "/RetNonRetDc/MyListItemgrid",

                data: {
                    strstatus: ""
                },
                datatype: "json",
                updaterow: function (rowid, rowdata) {
                    // synchronize with the server - send update command
                },
                datafields: [
                    { name: 'did', type: 'string' },
                    { name: 'ddate', type: 'string' },
                    { name: 'dctype', type: 'string' },
                    { name: 'party', type: 'string' },

                    { name: 'approve', type: 'string' },

                    { name: 'generate', type: 'string' },

                    { name: 'viewrow', type: 'string' },
                    { name: 'editrow', type: 'string' },
                    { name: 'delrow', type: 'string' },


                ],
                id: 'id',
            };
            var dataAdapter = new $.jqx.dataAdapter(source,
                { contentType: 'application/json; charset=utf-8' }, {
                loadComplete: function () {

                }
            }
            );

            $("#grid").jqxGrid(
                {

                    width: '100%',
                    source: dataAdapter,
                    //height: 450,
                    autorowheight: true,
                    autoheight: true,
                    source: source,
                    sortable: true,
                    filterable: true,
                    groupable: false,
                    pageable: true,
                    showfilterbar: true,
                    //showfilterrow: true,
                    filterbarmode: 'simple',

                    theme: 'darkblue',
                    enablebrowserselection: true,
                    columns: [

                        { text: 'Doc ID', filtertype: 'checkedlist', datafield: 'did', width: 150 },
                        { text: 'Doc Date', filtertype: 'checkedlist', datafield: 'ddate', width: 200 },
                        { text: 'DC Type', filtertype: 'input', datafield: 'dctype', width: 200 },
                        { text: 'Party ID', datafield: 'party', width: 300, align: 'center' },

                        { text: 'Approve', datafield: 'approve', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },

                        { text: 'Generate', datafield: 'generate', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },

                        { text: 'View', datafield: 'viewrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                        { text: 'Edit', datafield: 'editrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                        { text: 'Delete', datafield: 'delrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70, formatter: returnMyLink, edittype: 'select' },
                    ]
                });
            $("#ddlStatus").change(function () {
                var value = "Y";
                if ($(this).val() != "") {
                    value = $(this).val();
                }
                source.data = {
                    strstatus: value
                };
                $("#grid").jqxGrid({ source: source });
            });
        });

    function returnMyLink(cellValue, options, rowdata, action) {
        return "<a href='/Controller/Action/" + options.rowId + "' >Click here</a>";
    }

</script>



