@model IEnumerable<Arasan.Models.SalesEnquiry>

@{
    ViewData["Title"] = "Sales Enquiry";
}
<style>
    .newwidth {
        width: 120px;
    }
</style>

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Sales</a> </li>
            <li class="active"> <strong>Sales Enquiry</strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <form>
                        <div class="row">
                        <div class="col-md-12 ">
                        <div class=" textalignright">
                        <a href="@Url.Action("Sales_Enquiry", "SalesEnquiry")" class="btn  btn-round btn-primary" style="float: right; color:white;">Add Sales Enquiry</a>
                        <br>
                        </div>
                        </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">

                                    <div class="ibox-content collapse in">
                                        <div class="widgets-container">
                                            <div>
                                                <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                                    <thead>
                                                        <tr>
                                                            
                                                            <th>Enquiry No</th>
                                                            <th>Enquiry Date</th>
                                                            <th>Enq Type</th>
                                                            @*<th>Customer Name</th>*@
                                                            <th>Send Mail</th>
                                                            <th>Followup</th>
                                                            <th>Move To Quote</th>
                                                            <th>Edit</th>
                                                            <th>Delete</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody>
                                                        @{
                                                            int i = 1;


                                                            foreach (var item in Model)
                                                            {


                                                                    <tr>
                                                                      
                                                                        <td>@Html.DisplayFor(modelItem => item.EnqNo)</td>
                                                                        <td>@Html.DisplayFor(modelItem => item.EnqDate)</td>
                                                                        <td>@Html.DisplayFor(modelItem => item.EnqType)</td>

                                                                        @*<td>@Html.DisplayFor(modelItem => item.Customer)</td>*@

                                                                    <td><div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("SendMail", "SalesEnquiry",new { id=item.ID })"><img src='../Images/mail_icon.png' alt='Send Email' /></a></div></td>
                                                                        <td> <div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("Followup", "SalesEnquiry",new { id=item.ID })"><img src='../Images/followup.png' alt='FollowUp' /> - (1)</a></div></td>


                                                                        @if (item.status == "Generated")
                                                                    {
                                                                    
                                                                          
                                                                            <td><div class="fa-hover col-md-2 col-sm-4"> <img src='../Images/tick.png' alt='Moved to Quote' width='20' /></div></td>
                                                                            <td></td>
                                                                            <td></td>
                                                                    }
                                                                    else
                                                                    {

                                                                        //<td><div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("Print", "SalesEnquiry" ,new { id=item.ID })"><img src='../Images/pdf.png' alt='Generate PO' width='20' /></a></div></td>

                                                                            <td><div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("ViewQuote", "SalesEnquiry",new { id=item.ID })" class='fancybox' data-fancybox-type='iframe'><img src='../Images/move_quote.png' alt='View Details' width='20' /></a></div></td>
                                                                            <td>
      
                                                                                <div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("Sales_Enquiry", "SalesEnquiry",new { id=item.ID })"></a></div>
                                                                             </td>

                                                                        //<td>

                                                                        //    <div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-trash" aria-hidden="true" href="@Url.Action("Sales_Enquiry", "SalesEnquiry",new { id=item.ID })"></a></div>
                                                                          
                                                                        //</td>
                                                                        //<td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("Sales_Enquiry", "SalesEnquiry",new { id=item.ID })"></a></div></td>
                                                                        <td> <a href="@Url.Action("DeleteMR","SalesEnquiry",new {tag="Del",id=item.ID})" onclick="return confirm('Are you sure you want to close this record?');"><img src='../Images/Inactive.png' alt='Deactivate' /></a></td>

                                                                    }
                                                                    </tr>

                                                                i++;
                                                            }
                                                        }
                                                      
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#example7').DataTable({
            dom: 'Bfrtip',
            buttons: [{
                text: 'copy',
                extend: "copy",
                className: 'btn dark btn-outline'
            }, {
                text: 'csv',
                extend: "csv",
                className: 'btn aqua btn-outline'
            }, {
                text: 'excel',
                extend: "excel",
                className: 'btn aqua btn-outline'
            }, {
                text: 'pdf',
                extend: "pdf",
                className: 'btn yellow  btn-outline'
            }, {
                text: 'print',
                extend: "print",
                className: 'btn purple  btn-outline'
            }]
        });



    });
</script>

