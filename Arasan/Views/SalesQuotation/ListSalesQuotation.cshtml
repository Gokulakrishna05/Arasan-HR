@model IEnumerable<Arasan.Models.SalesQuotation>
@{
    ViewData["Title"] = "Sales Quotation";
}
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Sales</a> </li>
            <li class="active"> <strong>Sales Quotation</strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <form>
                        <div class="row">
                            <div class="col-md-12 ">
                                <div class=" textalignright">
                                    <a href="@Url.Action("SalesQuotation","SalesQuotation")" class="btn  btn-round btn-primary" style="float: right; color:white;">Add SalesQuotation</a>
                                    <br>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content collapse in">
                                        <div class="widgets-container">
                                            <div>
                                                <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>S.No</th>
                                                            <th>Branch</th>
                                                           @* <th>Supplier</th>*@
                                                            <th>Enquiry No</th>
                                                            <th>Quo No</th>
                                                            <th>Quo Date</th>
                                                            @* <th>Currency</th>*@
                                                            <th>Send Mail</th>
                                                            <th>Followup</th>
                                                           @* <th>Generate PO</th>*@
                                                            <th>Edit</th>
                                                            <th>Delete</th>
                                                        
                                                        </tr>
                                                    </thead>
                                                    
                                                    <tbody>
                                                        @{
                                                            int i = 1;

                                                            foreach (var item in Model)
                                                            {
                                                                <tr>
                                                                    <td>@i</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.EnNo)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.QuoId)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.QuoDate)</td>


                                                                    <td><div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("SendMail", "SalesQuotation",new { id=item.ID })"><img src='../Images/mail_icon.png' alt='Send Email' /></a></div></td>
                                                                    <td> <div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("Followup", "SalesQuotation",new { id=item.ID })"><img src='../Images/followup.png' alt='FollowUp' /> - (1)</a></div></td>
                                                                   

                                                                    <td>

                                                                        <div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("SalesQuotation", "SalesQuotation",new { id=item.ID })"></a></div>

                                                                    </td>
                                                                    <td>

                                                                        <div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-trash" aria-hidden="true" href="@Url.Action("SalesQuotation", "SalesQuotation",new { id=item.ID })"></a></div>

                                                                    </td>

                                                                </tr>
                                                                i++;
                                                            }
                                                        }
                                                           
                                                           
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#example7').DataTable({
            dom: 'Bfrtip',
            buttons: [{
                text: 'copy',
                extend: "copy",
                className: 'btn dark btn-outline'
            }, {
                text: 'csv',
                extend: "csv",
                className: 'btn aqua btn-outline'
            }, {
                text: 'excel',
                extend: "excel",
                className: 'btn aqua btn-outline'
            }, {
                text: 'pdf',
                extend: "pdf",
                className: 'btn yellow  btn-outline'
            }, {
                text: 'print',
                extend: "print",
                className: 'btn purple  btn-outline'
            }]
        });



    });
</script>
