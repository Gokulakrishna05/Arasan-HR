<script type="text/javascript">
    $(document).ready(function () {
        var source =
        {
            url: "/SalesQuotation/MyListSalesQuotationGrid",
            //url: "/ItemName/ItemName",
            data: {
                strstatus: ""
            },
            datatype: "json",
            updaterow: function (rowid, rowdata) {
                // synchronize with the server - send update command
            },
            datafields: [
                { name: 'enqno', type: 'string' },
                { name: 'date', type: 'string' },
                { name: 'quono', type: 'string' },
                { name: 'supplier', type: 'string' },
                { name: 'sendmail', type: 'string' },
                { name: 'followup', type: 'string' },
                { name: 'move', type: 'string' },
                { name: 'generate', type: 'string' },
                { name: 'editrow', type: 'string' },
                { name: 'delrow', type: 'string' },
                

            ],
            id: 'id',
        };
        var dataAdapter = new $.jqx.dataAdapter(source,
            { contentType: 'application/json; charset=utf-8' }, {
            loadComplete: function () {

            }
        }
        );

        $("#grid").jqxGrid(
            {
                width: '100%',
                source: dataAdapter,
                height: 450,
                source: source,
                //autoheight: true,
                sortable: true,
                filterable: true,
                groupable: false,
                pageable: true,
                showfilterbar: true,
                //showfilterrow: true,
                theme: 'ui-start',
                autorowheight: true,
                filterbarmode: 'simple',
                enablebrowserselection: true,
                columnsresize: true,
                selectionmode: 'multiplerowsextended',
                keyboardnavigation: false,
                columns: [
                    { text: 'Quotation No', filtertype: 'input', datafield: 'enqno', width: 150 },
                    { text: 'Quotation Date', datafield: 'date', width: 150, align: 'center' },
                    { text: 'Enquiry No', filtertype: 'checkedlist', datafield: 'quono', width: 200 },
                    { text: 'Customer Name', filtertype: 'checkedlist', datafield: 'supplier', width: 200 },
                    { text: 'Send Mail', datafield: 'sendmail', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, align: 'center', cellsalign: 'center', width: 80 },
                    { text: 'Follow Up', datafield: 'followup', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, align: 'center', cellsalign: 'center', width: 80 },
                    { text: 'Move To WorkOrder', datafield: 'move', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 120 },
                    { text: 'Generate SQ', datafield: 'generate', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, align: 'center', cellsalign: 'center', width: 120 },
                    { text: 'Edit', datafield: 'editrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                    { text: 'Delete', datafield: 'delrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                ]
            });
        $("#ddlStatus").change(function () {
            var value = "Y";
            if ($(this).val() != "") {
                value = $(this).val();
            }
            source.data = {
                strstatus: value
            };
            $("#grid").jqxGrid({ source: source });
        });
    });
</script>
