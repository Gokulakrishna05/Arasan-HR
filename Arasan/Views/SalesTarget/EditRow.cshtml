                                                            @Html.HiddenFor(o => o.Targetlst[i].ID)

                                                        </td>
                                                        <td>
                                                            @Html.DropDownListFor(o => o.Targetlst[i].ItemId, Model.Targetlst[i].Itemlst, "Please Select", new { @class = "form-control _select newcss", @id = "ddlItem" + i, style = "width: 250px;", onchange = "changeItem(this.value," + i + ")" })
                                                            @Html.HiddenFor(o => o.Targetlst[i].saveItemId)

                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Targetlst[i].Unit, new { @id = "txtUnit" + i, @class = "form-control", style = "width: 80px;" , @readonly = "readonly"})
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Targetlst[i].Quantity, new { @id = "txtQuantity" + i, @class = "form-control", style = "width: 80px;",onkeydown = "return isNumeric2(event.keyCode,this.value)", @onkeyup = "changeQty(this," + i + ")" })
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Targetlst[i].rate, new { @id = "txtrate" + i, @class = "form-control", style = "width: 80px;",onkeydown = "return isNumeric2(event.keyCode,this.value)",@readonly = "readonly", @onkeyup = "changeQty(this," + i + ")" })
                                                        </td>
                                                        <td>
                                                            @Html.HiddenFor(o => o.Targetlst[i].Isvalid, new { @id = "Isvalid" + i })
                                                            @Html.TextBoxFor(o => o.Targetlst[i].Amount, new { @id = "txtAmount" + i, @class = "form-control", style = "width: 80px;",onkeydown = "return isNumeric2(event.keyCode,this.value)", @readonly = "readonly", @onkeyup = "changeQty(this," + i + ")" })
                                                        </td>
                                                       
                                                    </tr>
                                                    i = i + 1;

                                                }
                                            }

                                        </tbody>




                                    </table>
                                </div>
                            </div>
                       
                            <div style="height:30px;"></div>
                            <button type="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave" onClick="window.parent.jQuery.fancybox.close();">Submit</button>
