@model Arasan.Models.State

@{
    ViewData["Title"] = "State";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a href="@Url.Action("ListState", "State")">State</a> </li>
            <li class="active"> <strong>State </strong> </li>
        </ol>
    </div>
</div>


<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <hr>

                    @using (Html.BeginForm("State", "State", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <form>

                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <br /> <label for="inputName3" class="col-sm-4 control-label">Country<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(C => C.countryid, Model.cuntylst,"--Please Select---", new { @id = "ddlcountry", @Class = "form-control _select", @TabIndex = 1 })
                                            @Html.HiddenFor(C => C.ID)
                                            @Html.HiddenFor(C => C.createby)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">

                                    <div class="tabs-container">
                                        <ul class="nav nav-tabs">
                                            <li class="active"><a href="#tab-1" data-toggle="tab">State Details</a></li>

                                        </ul>
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab-1">
                                                <!-- 1st tab  -->
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="btn-group">
                                                            <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow()" class="btn sbold green" /></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                 <div class="row">
                                                    <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                                        <table class="table table-striped table-hover" id="dataTable">
                                                            <thead>
                                                                <tr>
                                                                    <th>State Name</th>
                                                                    <th>State Code</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="tbBooks">
                                                                @{

                                                                    int i = 0;
                                                                    int j = 0;


                                                                    foreach (var item in Model.Stlst.ToList())
                                                                    {
                                                                        <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                                            <td>
                                                                                @Html.TextBoxFor(o => o.Stlst[i].state, new { @id = "txtstate" + i, @class = "form-control", style = "width: 200px;" })

                                                                            </td>
                                                                            <td>
                                                                                @Html.TextBoxFor(o => o.Stlst[i].code, new { @id = "txtcode" + i, @class = "form-control", style = "width: 200px;" })

                                                                            </td>
                                                                            <td>
                                                                                @Html.HiddenFor(o => o.Stlst[i].Isvalid, new { @id = "Isvalid" + i })
                                                                                <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="Stlst.Index" type="hidden" value="@(i)" />
                                                                            </td>
                                                                        </tr>
                                                                        i = i + 1;
                                                                        j = j + 1;


                                                                    }
                                                                }

                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>


                                   
                            <div style="height:30px;"></div>
                            <div class="col-lg-8"></div>
                            <button type="submit" name="submit" class="btn aqua m-t-xs bottom15-xs" id="btnSave" value="Save" tabindex="18">Submit</button>
                            <a button class="btn btn-danger" type="submit" href="@Url.Action("ListState", "State")">Cancel</a>

                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    $(function () {
        $('._select').select2();
    });

    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;


          
            if (document.getElementById("ddlcountry").value == ""||document.getElementById("ddlcountry").value == 0) {
                isValid = false;
                $(ddlcountry).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter country");
                return false;
            }
            else {
                $(ddlcountry).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtStateName").value == ""||document.getElementById("txtStateName").value == 0) {
                isValid = false;
                $(txtStateName).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter State Name");
                return false;
            }
            else {
                $(txtStateName).css({
                    "border": "",
                    "background": ""
                });
            }
            


            if (isValid == false)
                e.preventDefault();

        });

    });


    function AddRow() {
        var opt = "";
        $.ajax({
            type: "POST",
            url: 'GetItemJSON',
            success: function (data) {

                $.each(data, function () {
                    opt += "<option value=" + this.value + ">" + this.text + "</option>";
                });
                AppendRow(opt);
            }
        })
    }
    function AppendRow(opt) {
        var index = $("#tbBooks").children("tr").length;

        var State = "<td><input class='form-control' id='txtstate" + index + "' name='Stlst[" + index + "].state'  style='width: 200px;' type='text' /></td>";

        var Code = "<td><input class='form-control' id='txtcode" + index + "' name='Stlst[" + index + "].code'  style='width: 200px;' type='text' /></td>";

        var removeCell = "<td><input id='Isvalid" + index + "' name='Stlst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='Stlst.Index' type='hidden' value='" + index + "'  /></td>";

        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + State + Code + removeCell + "</tr>";
        //alert(Packing);
        $("#tbBooks").append(newRow);

        $(".chosen-select").chosen();
        $(function () {
            $('._select').select2();
        });
    }
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
    }
</script>


 