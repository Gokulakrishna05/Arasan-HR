            //if (document.getElementById("ddlcountry").value == "") {
            //    isValid = false;
            //    $(ddlcountry).css({
            //        "border": "1px solid red",
            //        "background": "#FFCECE"
            //    });

            //    alert("Please Select Country");
            //    return false;
            //}
            //else {
            //    $(ddlcountry).css({
            //        "border": "",
            //        "background": ""
            //    });
            //}
            if (document.getElementById("txtStateName").value == "") {
                isValid = false;
                $(txtStateName).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select State Name");
                return false;
            }
            else {
                $(txtStateName).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtStateCode").value == "") {
                isValid = false;
                $(txtStateCode).css({
