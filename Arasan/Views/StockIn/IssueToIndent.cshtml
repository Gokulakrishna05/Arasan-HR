 @model Arasan.Models.StockIn

@{
    ViewData["Title"] = "Issue To Indent";
}
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Transaction</a> </li>
            <li class="active"> <strong>Issue To Indent</strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">




        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                  
                    <form>


                        <div class="row">
                              <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputName3" class="col-sm-4 control-label">Item Name<label class="mandatory"></label></label>
                                              
													  <div class="col-sm-8">
                                                    @Html.DisplayFor(C => C.Item)<br/>
                                                </div>
                                            </div>
                                        </div> 
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="inputName3" class="col-sm-4 control-label">Quantity<label class="mandatory">*</label></label>
													  <div class="col-sm-8">
                                                    @Html.DisplayFor(C => C.Qty)<br/>
                                                </div>
												
                                            </div>
                                        </div>
                        
                        </div>
                        
<div style="height:30px;"></div>

<div class="row">
          <div class="col-lg-12">
            <div class="ibox float-e-margins">
              
              <div class="ibox-content collapse in">
                <div class="widgets-container">
                  <div >
                    <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                      <thead>
                        <tr>
                          <th>Location Name</th>
                          <th>Indent No.</th>
                          <th>Indent Date</th>
                          <th>Item Name</th>
                          <th>Qty.</th>
                          
                        </tr>
                      </thead>
                   
                      <tbody>
                            @{
                                                            int i = 1;

                                                            foreach (var item in Model.Indentlist)
                                                            {
                                                                

                                <tr>
                                                                            <td>@Html.DisplayFor(modelItem => item.LocationName)</td>
                                                                            <td>@Html.DisplayFor(modelItem => item.IndentNo)</td>
                                                                            <td>@Html.DisplayFor(modelItem => item.IndentDate)</td>
                                                                            <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
                                                                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                                                          
                                                                           

                                                                        
                                 </tr>

                                                                i++;
                                                            }
                                                        }
                     
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    
                          
                                 
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

                          <script>
                           
                              $(document).ready(function() {
                                $('#example7').DataTable({
                dom: 'Bfrtip',
                buttons: [{
                    text: 'copy',
                    extend: "copy",
                    className: 'btn dark btn-outline'
                }, {
                    text: 'csv',
                    extend: "csv",
                    className: 'btn aqua btn-outline'
                }, {
                    text: 'excel',
                    extend: "excel",
                    className: 'btn aqua btn-outline'
                }, {
                    text: 'pdf',
                    extend: "pdf",
                    className: 'btn yellow  btn-outline'
                }, {
                    text: 'print',
                    extend: "print",
                    className: 'btn purple  btn-outline'
                }]
            });



        });
         $('.form_date').datetimepicker({
     //   language:  'fr',
        weekStart: 1,
        todayBtn:  1,
    autoclose: 1,
    todayHighlight: 1,
    startView: 2,
    minView: 2,
    forceParse: 0
    });
                          </script>

                     