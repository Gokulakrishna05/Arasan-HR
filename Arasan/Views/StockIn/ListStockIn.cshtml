                                                        <td> <div class="fa-hover col-md-2 col-sm-4"> <a href="@Url.Action("Followup", "PurchaseEnq",new { id=item.ID })"><img src='../Images/followup.png' alt='FollowUp' /> - (1)</a></div></td>*@
                                                           
                                                        </tr>

                                                          i++;
                                                        }
                                                        }
                                                      
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

