<script type="text/javascript">
    $(document).ready(function () {
        var source =
        {
            url: "/StockReconcilation/MyListStockReconcilationgrid",
            data: {
                strfrom: "@strfrom ",
                strTo: "@strTo",
                strstatus: ""
            },
            datatype: "json",
            updaterow: function (rowid, rowdata) {
                // synchronize with the server - send update command
            },
            datafields: [
                { name: 'doc', type: 'string' },
                { name: 'date', type: 'string' },
                { name: 'loc', type: 'string' },
             
                
                { name: 'type', type: 'string' },
                { name: 'viewrow', type: 'string' },
                { name: 'editrow', type: 'string' },
                { name: 'delrow', type: 'string' },
            ],
            id: 'id',
        };
        var dataAdapter = new $.jqx.dataAdapter(source,
            { contentType: 'application/json; charset=utf-8' }, {
            loadComplete: function () {

            }
        }
        );

        $("#grid").jqxGrid(
            {
                width: '100%',
                source: dataAdapter,
                //height: 450,
                autorowheight: true,
                autoheight: true,
                source: source,
                sortable: true,
                filterable: true,
                groupable: false,
                pageable: true,
                showfilterbar: true,
                filterbarmode: 'simple',
                //showfilterrow: true,
                theme: 'ui-start',
                enablebrowserselection: true,
                columns: [
                    { text: 'Doc No', filtertype: 'input', datafield: 'doc', width: 150 },
                    { text: 'DocDate', filtertype: 'input', datafield: 'date', width: 150 },
                    { text: 'Type', filtertype: 'input', datafield: 'type', width: 150 },
                    { text: 'Location', filtertype: 'input', datafield: 'loc', width: 150 },
                    { text: 'View', datafield: 'viewrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                    { text: 'Edit', datafield: 'editrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                    { text: 'Delete', datafield: 'delrow', sortable: false, exportable: false, filterable: false, groupable: false, autoshowfiltericon: false, cellsalign: 'center', width: 70 },
                ]
            });
        $("#ddlStatus").change(function () {
            var value = "Y";
            if ($(this).val() != "") {
                value = $(this).val();
            }
            source.data = {
                strstatus: value
            };
            $("#grid").jqxGrid({ source: source });
        });
    });
</script>
