@model Arasan.Models.StockReconcilation
@{
    ViewData["Title"] = "Drum Stock Reconcilation";
}
<div class="page-content-wrapper animated fadeInRight">
    <div class="row wrapper border-bottom page-heading">
        <div class="col-lg-12">

            <ol class="breadcrumb">
                <li> <a href="#">Home </a> </li>
                <li> <a>Production</a> </li>
                <li class="active"> <strong> Drum Stock Reconcilation </strong> </li>
            </ol>
        </div>
    </div>
    <div class="wrapper-content ">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="widgets-container">
                        <h5 style="font-size:14px">Drum Stock Reconcilation</h5>
                        <hr>
                        <form>
                            <div class="row">
                                
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">From Location<label class="Mandatory"></label></label>
                                          <div class="col-sm-8">
                                                @Html.DropDownListFor(C => C.Location, Model.Loclst," -- Please Select -- ", new { @id = "ddlLocation", @Class = "form-control _select", @TabIndex = 1,@onchange="changeItem(this.value)"  })<br />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Doc ID<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">

                                              @Html.TextBoxFor(C => C.Docid, new { @id = "txtDocId", @class = "form-control", @TabIndex = 1,@readonly="readonly"  })
                                         @Html.HiddenFor(C => C.ID)
                                            @Html.HiddenFor(C => C.Enterd)
                                            @Html.HiddenFor(C => C.Branch)<br />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="inputName3" class="col-sm-4 control-label">DOC Date<label class="Mandatory"></label></label>
                                        <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                            @Html.TextBoxFor(C => C.Docdate, new { @id = "Docdate", @class = "form-control", @TabIndex = 2,@size="31" ,@readonly="readonly"})
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Reason<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                             @Html.TextBoxFor(C => C.reason, new { @id = "txtreason", @class = "form-control", @TabIndex = 1   })
<br />
                                        </div>

                                    </div>
                                </div>


                            </div>
                            <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="btn-group">
                                                            <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow1()" class="btn sbold green" /></p>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:200px;">

                                                        <table class="table table-striped table-hover" id="dataTable">
                                                        <thead>
                                                            <tr>
                                                                
                                                                <th>Item Id </th>
                                                                <th>Unit</th>
                                                               
                                                                <th>Drum No</th>
                                                                <th>Lot No</th>

                                                                <th>Qty</th>
                                                                
                                                                <th>Book Stock</th>
                                                                <th>Phy.Stock</th>
                                                                <th>Qty Diff</th>
                                                                

                                                            </tr>
                                                        </thead>
                                                               <tbody id="tbBooks">

                                                                @{

                                                                    int j = 0;

                                                                    foreach (var item in Model.stockLst.ToList())
                                                                    {
                                                                                <tr id="trBook@(j)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">
                                                                                 
                                                                                <td>
                                                                                        @Html.DropDownListFor(o => o.stockLst[j].Item, Model.stockLst[j].Itemlst, "Please Select", new { @class = "form-control _select newcss", @id = "ddlitem" + j, style = "width: 200px;",@onchange="changeDrum(this.value,"+j+")"})

                                                                                    </td>
                                                                                    <td>
                                                                                     
                                                                                        @Html.TextBoxFor(o => o.stockLst[j].unit, new { @id = "txtunit" + j, @class = "form-control", style = "width: 120px;" ,@readonly="readonly"})

                                                                                        @*@Html.DropDownListFor(o => o.unpackLst[j].batchno, Model.unpackLst[j].batchlst, "Please Select", new { @class = "form-control _select   newcss", @id = "ddlbatchno" + j, style = "width: 200px;"  })*@
                                                                                  
                                                                                    </td>
                                                                                    <td>
                                                                                        @Html.DropDownListFor(o => o.stockLst[j].drumno, Model.stockLst[j].drumlst, "Please Select", new { @class = "form-control _select newcss", @id = "ddldrumno" + j, style = "width: 200px;",@onchange="changeBatch(this.value,"+j+")"})
                                                                                    </td>
                                                                                     <td width="200px">
                                                                                    <label id="txtbatchno@(j)" style="width:200px;"></label>
                                                                                             @Html.HiddenFor(o => o.stockLst[j].batchno, new { @id = "txtbatchno" + j, @class = "form-control" })

                                                                                  
                                                                                    </td>
                                                                                    <td>
                                                                                  
                                                                                    @Html.TextBoxFor(o => o.stockLst[j].IssueQty, new { @id = "txtIssueQty" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)"})
                                                                                    </td>
                                                                                    
                                                                                    <td>
                                                                                  
                                                                                    @Html.TextBoxFor(o => o.stockLst[j].totstock, new { @id = "txttotstock" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)"})
                                                                                    </td>
                                                                                     <td>
                                                                                  
                                                                                    @Html.TextBoxFor(o => o.stockLst[j].tstock, new { @id = "txttstock" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)"})
                                                                                    </td>
                                                                                     <td>
                                                                                  
                                                                                    @Html.TextBoxFor(o => o.stockLst[j].stockdiff, new { @id = "txtstockdiff" + j, @class = "form-control", style = "width: 120px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)"})
                                                                                    </td>
                                                                                    <td>
                                                                                        @Html.HiddenFor(o => o.stockLst[j].Isvalid, new { @id = "IsInvalid" + j })
                                                                                        <img onclick="removeRow(@(j));" src="../Images/delete.png" style="cursor:pointer" /> <input name="EnqLst.Index" type="hidden" value="@(j)" />
                                                                                    </td>
                                                                                </tr>
                                                                     
                                                                        j = j + 1;

                                                                    }
                                                                }
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                            <div style="height:30px;"></div>
                            <button type="submit" class="btn aqua m-t-xs bottom15-xs">Submit</button>
                            <button class="btn btn-danger" type="submit">Cancel</button><br />

                        </form>
                    </div>

                </div>

            </div>

        </div>

    </div>

</div>
<script>
     $(function() {
            $('._select').select2();
        });
    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
     $('.form_datetime').datetimepicker({
        //language:  'fr',
        weekStart: 1,
        todayBtn:  1,
    autoclose: 1,
    todayHighlight: 1,
    startView: 2,
    forceParse: 0,
        showMeridian: 1
    });

      function changeItem(itemid) {
       
        $.ajax({
            url: "GetItemJSON",
            type: "post",
            data: { 'itemid': itemid },
            cache: false,
            success: function (response) {
                var newlist;
                //alert(JSON.stringify(response));
                newlist = response.Ilst;
                   var i = 0;
                
                        $('tr.chkitemlst').each(function () {
                    if ($(this).css('display') !== 'none') {
                        PopulateDropDown("#ddlitem" + i, response);
                        i += 1;
                    }
                });
                         
                
            },
            error: function () {
                debugger;
                alert("Please Select Location");
            }
        });
    }
      function changeDrum(itemid,i) {
      var loc= document.getElementById("ddlLocation").value;
        $.ajax({
            url: "GetDrumJSON",
            type: "post",
            data: { 'itemid': itemid,'loc':loc},
            cache: false,
            success: function (response) {
                var newlist;
                //alert(JSON.stringify(response));
                newlist = response.Ilst;
               
                $('tr.chkitemlst').each(function () {
                    if ($(this).css('display') !== 'none') {
                        PopulateDropDown("#ddldrumno" + i, response);
                        i += 1;
                    }
                });
            },
            error: function () {
                debugger;
                alert("Please Select Item");
            }
        });
         $.ajax({
            url: 'Getitemdetails',
            data: { "itemid": itemid },
            type: "GET",
            success: function (result) {

                
                document.getElementById("txtunit" + i).value = result.unit;

           
            },
            error: function () {
            alert("Data Not Found");
            }
            });
    }
    function changeBatch(itemid,i) {
      var loc= document.getElementById("ddlLocation").value;
      var item= document.getElementById("ddlitem" +i).value;
        $.ajax({
            url: "GetBatchJSON",
            type: "get",
            data: { 'itemid': itemid,'loc':loc,'item':item},
             success: function (result) {
                
                document.getElementById("txtbatchno" + i).innerHTML = result.batch;
                document.getElementById("txtbatchno" + i).value = result.batch;
                document.getElementById("txttotstock" + i).value = result.stock;
               
              
              
            },
            error: function () {
                alert("Data Not Found");
            }
        });
    }
      function PopulateDropDown(dropDownId, list) {
        //alert(list);
        $(dropDownId).empty().append('<option selected="selected" value="0">Please select</option>');
        if (list != null && list.length > 0) {
            $(dropDownId).removeAttr("disabled");
            $.each(list, function () {
                $(dropDownId).append($("<option></option>").val(this['value']).html(this['text']));
            });
        }
        $(dropDownId).trigger("liszt:updated");
    }
</script>