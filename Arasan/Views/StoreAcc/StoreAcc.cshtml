                                        </div>

                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Ref No<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Refno, new { @id = "txtRefno", @class = "form-control", @TabIndex = 1 })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Ref Date<label class="Mandatory"></label></label>

                                        <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy" ,@readonly=true>
                                            @Html.TextBoxFor(C => C.Refdate, new { @id = "Refdate", @class = "form-control", @TabIndex = 2,@size="31"})
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Ret No<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Retno, new { @id = "txtRetno", @class = "form-control", @TabIndex = 1 })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Rat Date<label class="Mandatory"></label></label>

                                        <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy" ,@readonly=true>
                                            @Html.TextBoxFor(C => C.Retdate, new { @id = "Retdate", @class = "form-control", @TabIndex = 2,@size="31"})
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>


                                </div>
                            </div>
                        </div>


                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="btn-group">
                                        <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow()" class="btn sbold green" /></p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">

                                    @* <div class="ibox float-e-margins">*@

                                    <!-- / ibox-title -->
                                    @* <div id="demo3" class="ibox-content collapse in">
                                <div class="borderedTable">
                                <div class="table-scrollable">*@
                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                                        <tr>

                                                           
                                                            <th> Item ID </th>
                                                            <th> Unit </th>
                                                            <th> From Bin ID </th>
                                                            <th> To Bin ID </th>
                                                            <th> Batch </th>
                                                            <th> Serial </th>
                                                            <th> Pend Qty </th>
                                                            <th> Ret Qty </th>
                                                            <th> Rej Qty </th>
                                                            <th> Acc Qty </th>
                                                            <th> Rate </th>



                                                        </tr>

                                                    </thead>
                                        <tbody id="tbBooks">
                                             @{

                                                            int i = 0;

                                                            foreach (var item in Model.Itlst.ToList())
                                                            {
                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                        <td>
                                                            @Html.DropDownListFor(o => o.Itlst[i].Itlst, Model.Itlst[i].Itlst, "Please Select", new { @class = "form-control chosen-select newcss", @id = "ddlItlst" + i, style = "width: 200px;", onchange = "Grup_Change(this.value," + i + ")"})

                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].Unit, new { @id = "txtUnit" + i, @class = "form-control", style = "width: 90px;"})
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].FromBinID, new { @id = "txtFromBinID" + i, @class = "form-control", style = "width: 90px;" })
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].ToBinID, new { @id = "txtToBinID" + i, @class = "form-control", style = "width: 90px;" })
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].Batch, new { @id = "txtBatch" + i, @class = "form-control", style = "width: 90px;" })
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].Serial, new { @id = "txtSerial" + i, @class = "form-control", style = "width: 90px;" })
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].PendQty , new { @id = "txtPendQty" + i, @class = "form-control", style = "width: 90px;" })
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].RetQty, new { @id = "txtRetQty" + i, @class = "form-control", style = "width: 90px;" })
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].RejQty, new { @id = "txtRejQty" + i, @class = "form-control", style = "width: 90px;" })
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].AccQty, new { @id = "txtAccQty" + i, @class = "form-control", style = "width: 90px;" })
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(o => o.Itlst[i].Rate, new { @id = "txtRate" + i, @class = "form-control", style = "width: 90px;" })
                                                        </td>
                                                       
                                                        <td>
                                                            @Html.HiddenFor(o => o.Itlst[i].Isvalid, new { @id = "Isvalid" + i })
                                                            <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="Suplst.Index" type="hidden" value="@(i)" />
                                                        </td>

                                                    </tr>
                                                        
                                                    i = i + 1;

                                                }
                                            }

                                                    </tbody>




                                    </table>
                                </div>
                            </div>
                                    
                               
                           
                        

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Narration<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Narr, new { @id = "txtNarr", @class = "form-control", @TabIndex = 1 })
                                    </div>
                                </div>
                            </div>

                        </div>




                            
                            <div style="height:30px;"></div>
                            <button type="submit" name="submit" class="btn btn-success" id="btnSave" value="Save" tabindex="18">Insert</button>
                            <a button class="btn btn-danger" type="submit" href="@Url.Action("List_StoreAcc", "StoreAcc")">Cancel</a>
                            
                    </form>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    $(".chosen-select").chosen();

    function PopulateDropDown(dropDownId, list) {
        //alert(list);
        $(dropDownId).empty().append('<option selected="selected" value="0">Please select</option>');
        if (list != null && list.length > 0) {
            $(dropDownId).removeAttr("disabled");
            $.each(list, function () {
                $(dropDownId).append($("<option></option>").val(this['value']).html(this['text']));
            });
        }
        $(dropDownId).trigger("liszt:updated");
    }
    $(".chosen-select").chosen();
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
    }
    function AddRow() {
        var opt = "";
        $.ajax({
            type: "POST",
            url: 'GetItemJSON',
            success: function (data) {

                $.each(data, function () {
                    opt += "<option value=" + this.value + ">" + this.text + "</option>";
                });
                AppendRow(opt);
            }
        })
    }
    $(".chosen-select").chosen();
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
    }
    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
    function AppendRow(opt) {
        var index = $("#tbBooks").children("tr").length;

        var Itlst = "<td><select style = 'width: 200px;' class='form-control chosen-select newcss' id='Itlst" + index + "' name='Itlst[" + index + "].Itlst' onchange = 'Grup_Change(this.value," + index + ")'><option value=''>Please select</option>" + opt + "</select></td>";

        var Unit = "<td><input class='form-control' id='txtUnit" + index + "' name='Itlst[" + index + "].Unit'  style='width: 90px;' type='text'   /></td>"

        var FromBinID = "<td><input class='form-control' id='txtFromBinID" + index + "' name='Itlst[" + index + "].FromBinID'  style='width: 90px;' type='text'   /></td>"

        var ToBinID = "<td><input class='form-control' id='txtToBinID" + index + "' name='Itlst[" + index + "].ToBinID'  style='width: 90px;' type='text'   /></td>"

        var Batch = "<td><input class='form-control' id='txtBatch" + index + "' name='Itlst[" + index + "].Batch'  style='width: 90px;' type='text'   /></td>"

        var Serial = "<td><input class='form-control' id='txtSerial" + index + "' name='Itlst[" + index + "].Serial'  style='width: 90px;' type='text'   /></td>"

        var PendQty = "<td><input class='form-control' id='txtPendQty" + index + "' name='Itlst[" + index + "].PendQty'  style='width: 90px;' type='text'   /></td>"

        var RetQty = "<td><input class='form-control' id='txtRetQty" + index + "' name='Itlst[" + index + "].RetQty'  style='width: 90px;' type='text'   /></td>"

        var RejQty = "<td><input class='form-control' id='txtRejQty" + index + "' name='Itlst[" + index + "].RejQty'  style='width: 90px;' type='text'   /></td>"

        var AccQty = "<td><input class='form-control' id='txtAccQty" + index + "' name='Itlst[" + index + "].AccQty'  style='width: 90px;' type='text'   /></td>"

        var Rate = "<td><input class='form-control' id='txtRate" + index + "' name='Itlst[" + index + "].Rate'  style='width: 90px;' type='text'   /></td>"

        
        var removeCell = "<td><input id='Isvalid" + index + "' name='Itlst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='Itlst.Index' type='hidden' value='" + index + "'  /></td>";

        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Itlst + Unit + FromBinID + ToBinID + Batch + Serial + PendQty + RetQty + RejQty + AccQty + Rate + removeCell + "</tr>";
        //alert(Packing);
        $("#tbBooks").append(newRow);

        $(".chosen-select").chosen();
    }
</script>