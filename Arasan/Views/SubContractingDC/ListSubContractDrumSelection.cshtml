@model Arasan.Models.SubContractDDDrumdetailstable
@{
    Layout = "_PopupLayout";
    ViewData["Title"] = "Sub Contracting DC";
     
}
<partial name="JqxGridPartial" />
<style>
    .newwidth {
        width: 120px;
    }

    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Sub Contracting</a> </li>
            <li class="active"> <strong>Sub Contracting DC</strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">SubContracting DC Drum View  </h5>
                    <hr>
                  
                        <form>
                            

                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th>LOT NO</th>
                                                <th>DRUM NO</th>
                                                <th>QTY</th>
                                                <th>RATE </th>
                                                <th>AMOUNT </th>



                                            </tr>
                                        </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int i = 0;

                                                foreach (var item in Model.SUBDDrumlst.ToList())
                                                {
                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">
                                                        <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].lotno)@Html.HiddenFor(o => o.SUBDDrumlst[i].lotno, new { @id = "lotno" + i })</td>
                                                        <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].drumno)@Html.HiddenFor(o => o.SUBDDrumlst[i].drumno, new { @id = "drumno" + i })</td>
                                                        <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].qty)@Html.HiddenFor(o => o.SUBDDrumlst[i].qty, new { @id = "qty" + i })</td>
                                                        <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].rate)@Html.HiddenFor(o => o.SUBDDrumlst[i].rate, new { @id = "rate" + i })</td>
                                                        <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].amount)@Html.HiddenFor(o => o.SUBDDrumlst[i].rate, new { @id = "amount" + i })</td>
                                                    </tr>

                                                    i = i + 1;
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </form>
                   
                </div>
            </div>
        </div>

    </div>
</div>


