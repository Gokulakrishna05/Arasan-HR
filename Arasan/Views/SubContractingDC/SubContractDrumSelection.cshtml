@model Arasan.Models.SubContractDDDrumdetailstable
@{
    Layout = "_PopupLayout";
    ViewData["Title"] = "SubContract DC";
    string itemid = ViewContext.HttpContext.Request.Query["itemid"];
    string rowid = ViewContext.HttpContext.Request.Query["rowid"];
}
<partial name="JqxGridPartial" />
<style>
    .newwidth {
        width: 120px;
    }

    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Sub Contracting</a> </li>
            <li class="active"> <strong>Sub Contracting DC</strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    <h5 style="font-size:14px">Drum Stock</h5>
                    <hr>
                    @using (Html.BeginForm("ApproveProEntry", "ProductionEntry", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <div class="row">
                                <div class="col-md-1"></div>
                                <div class="col-md-10">
                                    <div style="margin-top: 10px;float:right;">
                                        <input id="button" type="button" value="OK" class="btn btn-success" />
                                        <input type="button" onClick="window.parent.jQuery.fancybox.close();" value="Close" class="btn btn-danger" />
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                            </div>

                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th> @Html.CheckBoxFor(P => P.selectall, new { @id = "Selectallchk" , @onclick = "enableAllrepview();" })</th>
                                                <th>Batch No</th>
                                                <th>Drum No</th>
                                                <th>Stock</th>
                                                <th>Req Qty</th>
                                                <th>Rate </th>
                                                <th>Amount </th>



                                            </tr>
                                        </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int i = 0;

                                                foreach (var item in Model.SUBDDrumlst.ToList())
                                                {
                                                        <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">
                                                            <td>@Html.CheckBoxFor(o => o.SUBDDrumlst[i].drumselect, new { @id = "drumslect" + i }) @Html.HiddenFor(o => o.SUBDDrumlst[i].invid, new { @id = "invid" + i }) </td>
                                                            <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].lotno)@Html.HiddenFor(o => o.SUBDDrumlst[i].lotno, new { @id = "lotno" + i })</td>
                                                            <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].drumno)@Html.HiddenFor(o => o.SUBDDrumlst[i].drumno, new { @id = "drumno" + i })</td>
                                                            <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].qty)@Html.HiddenFor(o => o.SUBDDrumlst[i].qty, new { @id = "qty" + i })</td>
                                                            @if (item.drumno != null)
                                                        {
                                                                <td>@Html.TextBoxFor(o => o.SUBDDrumlst[i].reqqty,new{ @id = "reqqty" + i, @class = "form-control",@style = "width: 100px;",@readonly="readonly"})@Html.HiddenFor(o => o.SUBDDrumlst[i].reqqty, new { @id = "reqqty" + i })</td>
                                                        }
                                                        else
                                                        {
                                                                 <td>@Html.TextBoxFor(o => o.SUBDDrumlst[i].reqqty,new{ @id = "reqqty" + i, @class = "form-control",@style = "width: 100px;"})@Html.HiddenFor(o => o.SUBDDrumlst[i].reqqty, new { @id = "reqqty" + i })</td>
 
                                                        }
                                                            <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].rate)@Html.HiddenFor(o => o.SUBDDrumlst[i].rate, new { @id = "rate" + i })</td>
                                                            <td>@Html.DisplayFor(o => o.SUBDDrumlst[i].amount)@Html.HiddenFor(o => o.SUBDDrumlst[i].amount, new { @id = "amount" + i })</td>
                                                        </tr>

                                                    i = i + 1;
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    var itemid = "@itemid";
    var rowid = "@rowid";
    $(function () {
        var drumid = window.parent.document.getElementById('hddrumid' + rowid).value;
        if (drumid != "") {
            var j = 0;
            const myArray = drumid.split(",");

            $('tr.chkitemlst').each(function () {
                if ($(this).css('display') !== 'none') {
                    var invid = document.getElementById('invid' + j).value;
                    for (let i = 0; i < myArray.length; i++) {
                        if (invid == myArray[i]) {
                            $('#drumslect' + j).prop('checked', true);
                            break;
                        }
                    }

                }
                j += 1;
            });
        }


    });
    function enableAllrepview() {

        if ($("#Selectallchk").prop('checked') == true) {
            var j = 0;
            $('tr.chkitemlst').each(function () {
                if ($(this).css('display') !== 'none') {

                    $('#drumslect' + j).prop('checked', true);

                }
                j += 1;
            });

        }
        else {
            var j = 0;
            $('tr.chkitemlst').each(function () {
                if ($(this).css('display') !== 'none') {

                    $('#drumslect' + j).prop('checked', false);

                }
                j += 1;
            });
        }
    }

    $("#button").click(function () {
        if (confirm('Are you sure want to Submit?') == true) {
        var ar1 = "";
        var ar2 = "";
        var ar3 = "";
        var ar4 = "";
        var ar5 = "";
        var ar6 = "";
        var ar7 = "";
        var tot = 0;
        var j = 0;
            var rate = "";
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                var checkBox = document.getElementById('drumslect' + j);
                if (checkBox.checked == true) {
                    var invid = document.getElementById('invid' + j).value;
                    var drumno = document.getElementById('drumno' + j).value;
                        var lot = document.getElementById('lotno' + j).value;
                          rate = document.getElementById('rate' + j).value;
                    var qty = document.getElementById('reqqty' + j).value;
                    var stock = document.getElementById('qty' + j).value;
                    var amount = document.getElementById('amount' + j).value;
                    ar1 += invid + ",";
                    ar2 += drumno + ",";
                        ar3 += lot + ",";
                        ar4 += qty + "-";
                        ar5 += rate + "-";
                        ar6 += stock + "-";
                        ar7 += amount + "-";
                    tot += eval(qty);
                }
            }
            j += 1;
        });
        var drumid = ar1.substring(0, ar1.length - 1);
        var drumname = ar2.substring(0, ar2.length - 1);
            var lotno = ar3.substring(0, ar3.length - 1);
            var dqty = ar4.substring(0, ar4.length - 1);
            var drate = ar5.substring(0, ar5.length - 1);
            var stk = ar6.substring(0, ar6.length - 1);
            var damount = ar7.substring(0, ar7.length - 1);
        window.parent.document.getElementById('txtQuantity' + rowid).value = tot;
        window.parent.document.getElementById('txtDrumsdesc' + rowid).value = drumname;
        window.parent.document.getElementById('txtrate' + rowid).value = rate;
     //   window.parent.document.getElementById('hddrumid' + rowid).value = drumid;
            window.parent.document.getElementById('lotno' + rowid).value = lotno;
            window.parent.document.getElementById('dqty' + rowid).value = dqty;
            window.parent.document.getElementById('drate' + rowid).value = drate;
            window.parent.document.getElementById('dstock' + rowid).value = stk;
            window.parent.document.getElementById('damount' + rowid).value = damount;
        window.parent.changeQty(0, rowid);
        window.parent.jQuery.fancybox.close();
        }
    });
</script>

