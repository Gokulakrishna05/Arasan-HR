    function changeDrum(ItemId,i) {
        var pre = document.getElementById("txtPri" +i).value;
        var st = document.getElementById("txtStart"+i).value;
      
        document.getElementById("tbBooks").innerHTML = "";

        $.ajax({
            url: 'GetDrumDetails',
            type: "post",
            data: { "ItemId": ItemId, "st": st, "pre": pre },
            cache: false,

            success: function (list) {
                //if (list != null && list.length > 0) {
                list.forEach((item) => {

                    var index = $("#tbBooks").children("tr").length;
                    //alert(item.batch);
                    var Drum = "<td><input class='form-control' id='ddldrumno" + index + "' name='drumlist[" + index + "].packdrum'  style='width: 250px;' type='text'  readonly='True'  value=" + item.drumno + " /></td>";


                    var qty = "<td><input class='form-control' id='txtqty" + index + "' name='drumlist[" + index + "].'qty  style='width: 100px;' type='text'  onkeyup  = 'changeQty(this.value," + index + ")' /></td>";
                    var rate = "<td><input class='form-control' id='txtrate" + index + "' name='drumlist[" + index + "].'rate  style='width: 100px;' type='text'  onkeyup  = 'changeQty(this.value," + index + ")' /></td>";
                    var amount = "<td><input class='form-control' id='txtamount" + index + "' name='drumlist[" + index + "].'amount  style='width: 120px;' type='text' /></td>";



                    var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Drum + qty + rate + amount + "</tr>";

                    $("#tbBooks").append(newRow);
                });
                //}
            },
            error: function () {
                alert("Data Not Found");
            }
        });

    }
    function changeQty(_this, a) {
        try {
  var j = 0;
           
            
    

                            var totamt = 0;
             var qty = document.getElementById("txtqty" + a).value;
            var up = document.getElementById("txtrate" + a).value;
           


            if (qty == "")
