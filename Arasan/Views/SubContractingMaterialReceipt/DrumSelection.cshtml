@model Arasan.Models.SubContractingMaterialReceipt

@{
    Layout = "_PopupLayout";
    ViewData["Title"] = "Drum Select";
    string rowid = ViewContext.HttpContext.Request.Query["rowid"];

}
<style>
    .newwidth {
        width: 120px;
    }
</style>


<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    @using (Html.BeginForm("DrumSelection", "SubContractingMaterialReceipt", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="inputName3" class="col-sm-4 control-label">Start No<label class="mandatory">*</label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.Start, new { @id = "txtStart", @class = "form-control", @TabIndex = 1   , onkeydown = "return isNumeric2(event.keyCode,this.value)" })
                                            <br />

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="inputName3" class="col-sm-4 control-label">Last No<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.End, new { @id = "txtEnd", @class = "form-control", @TabIndex = 1   , onkeydown = "return isNumeric2(event.keyCode,this.value)" })
                                            <br />

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="inputName3" class="col-sm-4 control-label">Prefix<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.Pri, new { @id = "txtPri", @class = "form-control", @TabIndex = 1  })
                                            <br />

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="inputName3" class="col-sm-4 control-label">Total No.Of Drums <label class="Mandatory"></label></label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(C => C.Totdrum, new { @id = "txtTotdrum", @class = "form-control", @TabIndex = 1 , onkeydown = "return isNumeric2(event.keyCode,this.value)" , @onchange = "changeDrum(this.value)"  })
                                            <br />

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="height:30px;"></div>
                            <div class="col-md-12">
                                <div class="btn-group">
                                    <p style="float:right;"> <input type="button" value="Add Row" onclick="AddRow()" class="btn sbold green" /></p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                        <!-- / ibox-title -->
                                        <table class="table table-striped table-hover" id="dataTable">
                                            <thead>
                                                <tr>

                                                    <th>Drum No</th>
                                                    <th>Qty</th>

                                                    <th>  Rate </th>
                                                    <th>  Amount </th>


                                                </tr>
                                            </thead>

                                            <tbody id="tbBooks">
                                                @{
                                                    int i = 0;

                                                    foreach (var item in Model.drumlist.ToList())
                                                    {

                                                        <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                            <td>
                                                                @Html.DropDownListFor(o => o.drumlist[i].drumno, Model.drumlist[i].drulist, "Please Select", new { @class = "form-control _select newcss", @id = "ddldrumno" + i, style = "width: 200px;" })
                                                            </td>
                                                            <td>@Html.TextBoxFor(o => o.drumlist[i].qty, new { @id = "txtqty" + i, @class = "form-control", style = "width: 100px;" })  </td>
                                                            <td>@Html.TextBoxFor(o => o.drumlist[i].rate, new { @id = "txtrate" + i, @class = "form-control", style = "width: 100px;" })  </td>
                                                            <td>@Html.TextBoxFor(o => o.drumlist[i].amount, new { @id = "txtamount" + i, @class = "form-control", style = "width: 120px;" }) </td>
                                                            <td>
                                                                @Html.HiddenFor(o => o.drumlist[i].Isvalid, new { @id = "Isvalid" + i })
                                                                <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="drumlist.Index" type="hidden" value="@(i)" />
                                                            </td>

                                                        </tr>
                                                        i++;
                                                    }
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>



                            <div style="height:30px;"></div>
                            <div class="col-lg-10"></div>
                            <input id="button" type="button" value="OK" class="btn btn-success" />
                            <input type="button" class="btn btn-danger" value="Close" onclick="location.href='@Url.Action("SubContractingMaterialReceipt", "SubContractingMaterialReceipt")'" />


                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(function () {
        $(document).on('click', '.closeFancybox', function () {
            $.fancybox.close();
        });

    })
    $(function () {
        $('._select').select2();
    });
    function changeDrum(ItemId) {
        var pre = document.getElementById("txtPri").value;
        var st = document.getElementById("txtStart").value;
        var id = document.getElementById("txtTotdrum").value;
        document.getElementById("tbBooks").innerHTML = "";

        $.ajax({
            url: 'GetDrumDetails',
            type: "post",
            data: { "id": id, "st": st, "pre": pre },
            cache: false,

            success: function (list) {
                //if (list != null && list.length > 0) {
                list.forEach((item) => {

                    var index = $("#tbBooks").children("tr").length;
                    //alert(item.batch);
                    var Drum = "<td><input class='form-control' id='ddldrumno" + index + "' name='drumlist[" + index + "].packdrum'  style='width: 250px;' type='text'  readonly='True'  value=" + item.drumno + " /></td>";


                    var qty = "<td><input class='form-control' id='txtqty" + index + "' name='drumlist[" + index + "].'qty  style='width: 100px;' type='text'  /></td>";
                    var rate = "<td><input class='form-control' id='txtrate" + index + "' name='drumlist[" + index + "].'rate  style='width: 100px;' type='text' /></td>";
                    var amount = "<td><input class='form-control' id='txtamount" + index + "' name='drumlist[" + index + "].'amount  style='width: 120px;' type='text' /></td>";

                    var removeCell = "<td><input id='Isvalid" + index + "' name='drumlist[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='drumlist.Index' type='hidden' value='" + index + "'  /></td>";


                    var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Drum + qty + rate + amount + removeCell+ "</tr>";

                    $("#tbBooks").append(newRow);
                });
                //}
            },
            error: function () {
                alert("Data Not Found");
            }
        });

    }
    function AddRow() {
        var opt = "";


        $.ajax({
            type: "POST",
            url: 'GetDrumJSON',
            success: function (data) {
                $.each(data, function () {
                    opt += "<option value=" + this.value + ">" + this.text + "</option>";
                });
                AppendRow(opt);

            }
        })



    }
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }



    }
    function AppendRow(opt) {
        var index = $("#tbBooks").children("tr").length;

        var Drum = "<td><select style = 'width: 200px;' class='form-control _select newcss' id='ddldrumno" + index + "' name='drumlist[" + index + "].drumno'><option value=''>Please select</option>" + opt + "</select></td>";


        var Qty = "<td><input class='form-control' id='txtqty" + index + "' name='drumlist[" + index + "].qty'  style='width: 100px;' type='text'   /></td>";





        var rate = "<td><input class='form-control' id='txtrate" + index + "' name='drumlist[" + index + "].rate'  onkeydown='return isNumeric2(event.keyCode,this.value)' style='width: 100px;' type='text'    /></td>";

        var Amount = "<td><input class='form-control' id='txtamount" + index + "' name='drumlist[" + index + "].amount'  onkeydown='return isNumeric2(event.keyCode,this.value)' style='width: 120px; type='text'   /></td>";

        var removeCell = "<td><input id='Isvalid" + index + "' name='drumlist[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='drumlist.Index' type='hidden' value='" + index + "'  /></td>";


        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Drum + Qty + rate + Amount + removeCell + "</tr>";

        $("#tbBooks").append(newRow);

        $(function () {
            $('._select').select2();


        });

    }
</script>
