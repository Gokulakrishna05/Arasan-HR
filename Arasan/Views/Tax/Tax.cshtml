@model Arasan.Models.Tax

@{
    ViewData["Title"] = "Tax";
}
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong>Tax </strong> </li>
        </ol>
    </div>
</div>


<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                  
                     
                    <hr>
                    @using (Html.BeginForm("Tax", "Tax", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                    <form>
                        <div class="row">
                              <div class="col-lg-3"></div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Tax Type<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(C => C.Taxtype, new { @id = "txtTaxType", @class = "form-control", @TabIndex = 1 })<br />
                                    </div>
                                </div>
                            </div>
                            </div>
                            <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Tax Percentage %<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Percentage, new { @id = "txtPercentage", @class = "form-control",onkeydown = "return isNumeric2(event.keyCode,this.value)", @TabIndex = 1 })<br />
                                    </div>

                                </div>
                            </div>
                        </div>
                       
                        <div style="height:30px;"></div>
                        <div class="col-lg-8"></div>
                        <button type="submit" class="btn aqua m-t-xs bottom15-xs " id="btnSave">Submit</button>
                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListTax", "Tax")'">Cancel</button>

                    </form> 
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;

            if (document.getElementById("txtTaxType").value == "") {
                isValid = false;
                $(txtTaxType).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Tax Type");
                return false;
            }
            else {
                $(txtTaxType).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtPercentage").value == "") {
                isValid = false;
                $(txtPercentage).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Percentage");
                return false;
            }
            else {
                $(txtPercentage).css({
                    "border": "",
                    "background": ""
                });
            }


            if (isValid == false)
                e.preventDefault();

        });

    });
</script>