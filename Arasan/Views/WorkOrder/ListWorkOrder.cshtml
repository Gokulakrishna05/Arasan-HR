@model IEnumerable<Arasan.Models.WorkOrder>

@{
    ViewData["Title"] = "WorkOrder";
}
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li> <a href="#">Home</a> </li>
            <li> <a>Master</a> </li>
            <li class="active"> <strong>WorkOrder</strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">

                    <form>
                        <div class="row">
                            <div class="col-md-12 ">
                                <div class=" textalignright">
                                    <a href="@Url.Action("WorkOrder","WorkOrder")" class="btn  btn-round btn-primary" style="float: right; color:white;">Add WorkOrder</a>
                                    <br>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content collapse in">
                                        <div class="widgets-container">
                                            <div>
                                                <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                                    <thead>
                                                        <tr>
                                                           
                                                            <th>Branch </th>
                                                             <th>Doc Id</th>
                                                            <th>Doc Date</th>
                                                            <th>Location</th>
                                                            <th>Customer</th>
                                                            <th>Short Close</th>
                                                            <th>Edit</th>
                                                            <th>Delete</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody>
                                                        @{
                                                            int i = 1;

                                                            foreach (var item in Model)
                                                            {
                                                                <tr>

                                                                    <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.JopId)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.JopDate)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.Location)</td>

                                                                    <td>@Html.DisplayFor(modelItem => item.Customer)</td>
                                                                    <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("WorkOrderShortClose", "WorkOrderShortClose",new { id=item.ID })"></a></div></td>

                                                                    <td><div class="fa-hover col-md-2 col-sm-4"> <a class="icon fa fa-pencil" aria-hidden="true" href="@Url.Action("WorkOrder", "WorkOrder",new { id=item.ID })"></a></div></td>
                                                                    <td> <a href="@Url.Action("DeleteOrder","WorkOrder",new {tag="Del",id=item.ID})" onclick="return confirm('Are you sure you want to close this record?');"><img src='../Images/Inactive.png' alt='Deactivate' /></a></td>
                                                                </tr>
                                                                i++;
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#example7').DataTable({
            dom: 'Bfrtip',
            buttons: [{
                text: 'copy',
                extend: "copy",
                className: 'btn dark btn-outline'
            }, {
                text: 'csv',
                extend: "csv",
                className: 'btn aqua btn-outline'
            }, {
                text: 'excel',
                extend: "excel",
                className: 'btn aqua btn-outline'
            }, {
                text: 'pdf',
                extend: "pdf",
                className: 'btn yellow  btn-outline'
            }, {
                text: 'print',
                extend: "print",
                className: 'btn purple  btn-outline'
            }]
        });



    });
</script>