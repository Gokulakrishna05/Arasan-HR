                                    <!-- / ibox-title -->

                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>


                                                                        <th>Batch No</th>
                                                                        <th>Drum No </th>
                                                                        <th>  Qty</th>
                                                                        <th> Rate</th>

                                            </tr>
                                        </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int j = 0;



                                                foreach (var items in item.drumlst.ToList())
                                                {
