                                                        <td>
                                                                                    @Html.DisplayFor(o => o.Worklst[i].drumlst[j].lotno)
                                                                   </td>
                                                        <td>
                                                                         @Html.DisplayFor(o => o.Worklst[i].drumlst[j].drumno)
                                                        </td>
                                                        <td>
                                                                                    @Html.DisplayFor(o => o.Worklst[i].drumlst[j].qty)
                                                        </td>
                                                        <td>
                                                                                    @Html.DisplayFor(o => o.Worklst[i].drumlst[j].rate)
                                                        </td>


                                                    </tr>
