@model Arasan.Models.WorkOrder
@{
    Layout = "_PopupLayout";
    ViewData["Title"] = "Export WorkOrder Short Close";
}
<style>
    .newwidth {
        width: 120px;
    }
</style>
<div class="wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    @using (Html.BeginForm("ViewWorkOrder", "WorkOrder", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">DocId<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.DocId)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">DocDate<label class="Mandatory"></label></label>

                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.DocDate)
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Location<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.Location)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Customer Name<label class="Mandatory"></label></label>

                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.Customer)
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Ref No<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.RefNo)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Ref Date<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.RefDate)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">
                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th>Job OrderId</th>
                                                <th>Item Id </th>
                                             
                                                <th>Unit</th>
                                                <th>Ord.Qty</th>
                                                <th>Dc.Qty</th>
                                                <th>Excise.Qty</th>
                                                <th>Pend.Qty</th>
                                                <th>ShortClose.Qty</th>
                                                <th>Rate</th>
                                               
                                        </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int i = 0;
                                                int j = 1;

                                                foreach (var item in Model.OrderLst.ToList())
                                                {
                                                    <tr>

                                                        <td>
                                                            @Html.DisplayFor(o => o.OrderLst[i].JobId)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.OrderLst[i].ItemId)
                                                        </td>
                                                        
                                                        <td>
                                                            @Html.DisplayFor(o => o.OrderLst[i].Unit)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.OrderLst[i].OrdQty)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.OrderLst[i].Dc)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.OrderLst[i].Excise)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.OrderLst[i].PendQty)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.OrderLst[i].ShortQty)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(o => o.OrderLst[i].Rate)
                                                        </td>
                                                       
                                                      
                                                    </tr>
                                                    i = i + 1;
                                                    j = j + 1;

                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Narration<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.Narration)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div style="height:30px;"></div>
                            <div class="col-lg-10"></div>

                            <input type="button" class="btn btn-danger" value="Close" onClick="window.parent.jQuery.fancybox.close();" />


                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $(document).on('click', '.closeFancybox', function () {
            $.fancybox.close();
        })
    })
</script>


