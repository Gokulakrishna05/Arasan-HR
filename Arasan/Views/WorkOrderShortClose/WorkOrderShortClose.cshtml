                <div class="widgets-container">
                    <h5 style="font-size:14px">Work_Order_ShortClose</h5>
                    <hr>
                    @using (Html.BeginForm("WorkOrderShortClose", "WorkOrderShortClose", FormMethod.Post))
                        {
                          @Html.AntiForgeryToken()
                    <form>
                        <div class="row">
                           @* <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Branch<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                        <select class=" _select js-states form-control">


                                            <option value="TAAI">(TAAI)SVK - FACTORY </option>

                                        </select>
                                    </div>
                                </div>
