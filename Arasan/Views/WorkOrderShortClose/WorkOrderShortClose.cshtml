                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Location<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Location, new { @id = "txtLocation", @class = "form-control", @TabIndex = 1 })<br />
                                            @Html.HiddenFor(C => C.ID)
                                        @Html.HiddenFor(C => C.Branch)
                                          @Html.HiddenFor(C => C.LocationId)
                                    </div>
                                </div>
                            </div>
                       </div>
                           

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Jop Order Id<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.JopId, new { @id = "txtJopId", @class = "form-control", @TabIndex = 1 ,@readonly="readonly" })<br />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Customer ID<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.Customer, new { @id = "txtCustomer", @class = "form-control", @TabIndex = 1,@readonly="readonly"  })<br />
                                            @Html.HiddenFor(C => C.CustomerId)
                                    </div>
                                </div>
                            </div>
                        </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Doc ID<label class="Mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.DocId, new { @id = "txtDocId", @class = "form-control", @TabIndex = 1,@readonly="readonly" })<br />
                                           
                                        </div>
                                    </div>
                                </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="inputName3" class="col-sm-4 control-label">Doc Date<label class="Mandatory"></label></label>

                                    <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                        @Html.TextBoxFor(C => C.DocDate, new { @id = "DocDate", @class = "form-control", @TabIndex = 2,@size="32",@readonly=true })
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>

                                    <br />




                                </div>
                            </div>
                    </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Ref No<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(C => C.Ref, new { @id = "txtRef", @class = "form-control", @TabIndex = 1 })<br />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="inputName3" class="col-sm-4 control-label">Ref Date<label class="Mandatory"></label></label>
                                    <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd-M-yyyy">
                                        @Html.TextBoxFor(C => C.RefDate, new { @id = "RefDate", @class = "form-control", @TabIndex = 2,@size="32",@readonly=true })
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span> <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>

                                    <br />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-4 control-label">Reason<label class="Mandatory"></label></label>
                                    <div class="col-sm-8">
                                            @Html.TextBoxFor(C => C.OrderType, new { @id = "txtOrderType", @class = "form-control", @TabIndex = 1,@readonly="readonly"  })<br />

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div style="height:30px;"></div>
                       
                            <div class="row">


                                <br />   <br />  <div class="col-lg-12" style=" overflow-y:scroll; min-width:800px; min-height:400px;">

                                    <br />   <br />
                                    <div class="scroll">
                                        <table class="table table-striped table-hover" id="dataTable">
                                                    <thead>
                                                        <tr>
                                                           
                                                            <th>Item ID</th>
                                                            <th> Unit </th>
                                                            <th>  Ord.Qty </th>
                                                            <th> Pend.Qty </th>
                                                            <th> Short Cl.Qty </th>
                                                            <th> Rate </th>

                                                        </tr>
                                                    </thead>
                                        <tbody id="tbBooks">
                                            @{

                                                int i = 0;



                                                foreach (var item in Model.Closelst.ToList())
                                                {
                                                    <tr id="trBook@(i)" class="chkitemlst" style="height: 30px;border-bottom: 1px dashed #ddd;">

                                                        <td>
                                                            @Html.TextBoxFor(o => o.Closelst[i].ItemId, new { @id = "txtItemId" + i, @class = "form-control", style = "width: 130px;" ,ReadOnly="readonly",value="item.items"}) @Html.HiddenFor(o => o.Closelst[i].ItemId, new { @id = "ItemId" + i })
                                                        </td>
                                                        <td>
                                                                @Html.TextBoxFor(o => o.Closelst[i].unit, new { @id = "txtunit" + i, @class = "form-control", style = "width: 130px;" ,ReadOnly="readonly",value="item.unit"}) @Html.HiddenFor(o => o.Closelst[i].UnitId, new { @id = "UniId" + i })
                                                        </td>
                                                        <td>
                                                                @Html.TextBoxFor(o => o.Closelst[i].orderqty, new { @id = "txtorderqty" + i, @class = "form-control", style = "width: 130px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)",ReadOnly="readonly",value="item.orderqty"})
                                                        </td>
                                                        <td>
                                                                @Html.TextBoxFor(o => o.Closelst[i].PendQty, new { @id = "txtPendQty" + i, @class = "form-control", style = "width: 130px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)",value="item.PendQty",onkeyup = "changeQty(this.value," + i + ")"})
                                                        </td>
                                                        <td>
                                                                @Html.TextBoxFor(o => o.Closelst[i].clQty, new { @id = "txtclQty" + i, @class = "form-control", style = "width: 130px;" ,onkeydown = "return isNumeric2(event.keyCode,this.value)",value="item.clQty"})
                                                        </td>
                                                        <td>
                                                                @Html.TextBoxFor(o => o.Closelst[i].rate, new { @id = "txtrate" + i, @class = "form-control", style = "width: 130px;",onkeydown = "return isNumeric2(event.keyCode,this.value)",value="item.rate"})
                                                        </td>
                                                        <td>
                                                            @Html.HiddenFor(o => o.Closelst[i].Isvalid, new { @id = "Isvalid" + i })
                                                            <img onclick="removeRow(@(i));" src="../Images/delete.png" style="cursor:pointer" /> <input name="EnqLst.Index" type="hidden" value="@(i)" />
                                                        </td>
                                                    </tr>
                                                    i = i + 1;

                                                }
                                            }
                                                        
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>





                        <div style="height:30px;"></div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <label for="inputName3" class="col-sm-2 control-label">Narration<label class="Mandatory"></label></label>
                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(C => C.Narr, new { @id = "txtNarr", @class = "form-control", @TabIndex = 1 })<br />
                                    </div>
                                </div>
                            </div>

                        </div>
                            <div style="height:30px;"></div>
                            <button type="submit" class="btn aqua m-t-xs bottom15-xs" onclick="location.href='@Url.Action("ListWorkOrder", "WorkOrder")'" id="btnSave">Submit</button>
                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListWorkOrder", "WorkOrder")'">Cancel</button>
                    </form>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    $(function () {
        $('._select').select2();
    });
    $(function () {
        var jobid = '@ViewBag.Quo';
        changeQuoDet('edit', jobid);
    });
    $('.form_date').datetimepicker({
        //   language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
    function changeQty(_this, i) {
        try {
            var qty = 0;
            var qty = document.getElementById("txtPendQty" + i).value;
            var stkqty = document.getElementById("txtorderqty" + i).value;
          

            if (eval(qty) > eval(stkqty)) {
                document.getElementById("txtPendQty" + i).value = "0";
                alert("Pending Quantity Exceeds the Actual Quantity");
                qty = 0;
            }
        }
          
        catch (ex) {
            alert(ex.message);
        }
    }
</script>